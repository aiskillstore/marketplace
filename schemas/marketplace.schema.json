{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://skillstore.io/schemas/marketplace.schema.json",
  "title": "Claude Code Plugin Marketplace",
  "description": "Schema based on official Claude Code plugin marketplace documentation",
  "type": "object",
  "required": ["name", "owner", "plugins"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*$",
      "description": "Marketplace identifier (kebab-case, no spaces)"
    },
    "owner": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": { "type": "string", "description": "Name of the maintainer or team" },
        "email": { "type": "string", "format": "email", "description": "Contact email for the maintainer" }
      },
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "description": { "type": "string", "description": "Brief marketplace description" },
        "version": { "type": "string", "description": "Marketplace version" },
        "pluginRoot": { "type": "string", "description": "Base directory prepended to relative plugin source paths" }
      },
      "additionalProperties": false
    },
    "plugins": {
      "type": "array",
      "items": { "$ref": "#/definitions/pluginEntry" }
    }
  },
  "definitions": {
    "pluginEntry": {
      "type": "object",
      "required": ["name", "source"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9-]*$",
          "description": "Plugin identifier (kebab-case, no spaces)"
        },
        "source": {
          "oneOf": [
            { "type": "string", "description": "Relative path to plugin directory" },
            {
              "type": "object",
              "properties": {
                "source": { "type": "string", "enum": ["github", "url"] },
                "repo": { "type": "string", "description": "GitHub repo in owner/repo format" },
                "url": { "type": "string", "format": "uri", "description": "Git repository URL" },
                "ref": { "type": "string", "description": "Git ref (branch, tag, commit)" },
                "path": { "type": "string", "description": "Path within repository" }
              },
              "required": ["source"],
              "additionalProperties": false
            }
          ],
          "description": "Where to fetch the plugin from"
        },
        "description": { "type": "string", "description": "Brief plugin description" },
        "version": { "type": "string", "description": "Plugin version" },
        "author": {
          "type": "object",
          "required": ["name"],
          "properties": {
            "name": { "type": "string", "description": "Author name" },
            "email": { "type": "string", "format": "email", "description": "Author email" }
          },
          "additionalProperties": false
        },
        "homepage": { "type": "string", "format": "uri", "description": "Plugin homepage or documentation URL" },
        "repository": { "type": "string", "format": "uri", "description": "Source code repository URL" },
        "license": { "type": "string", "description": "SPDX license identifier" },
        "keywords": { "type": "array", "items": { "type": "string" }, "description": "Tags for plugin discovery" },
        "category": { "type": "string", "description": "Plugin category for organization" },
        "tags": { "type": "array", "items": { "type": "string" }, "description": "Tags for searchability" },
        "strict": {
          "type": "boolean",
          "default": true,
          "description": "When true, plugin source must contain plugin.json. When false, marketplace entry defines everything."
        },
        "commands": {
          "oneOf": [
            { "type": "string" },
            { "type": "array", "items": { "type": "string" } }
          ],
          "description": "Custom paths to command files or directories"
        },
        "agents": {
          "oneOf": [
            { "type": "string" },
            { "type": "array", "items": { "type": "string" } }
          ],
          "description": "Custom paths to agent files"
        },
        "hooks": {
          "oneOf": [
            { "type": "string" },
            { "type": "object" }
          ],
          "description": "Custom hooks configuration or path to hooks file"
        },
        "mcpServers": {
          "oneOf": [
            { "type": "string" },
            { "type": "object" }
          ],
          "description": "MCP server configurations or path to MCP config"
        },
        "lspServers": {
          "oneOf": [
            { "type": "string" },
            { "type": "object" }
          ],
          "description": "LSP server configurations or path to LSP config"
        }
      },
      "additionalProperties": false
    }
  }
}
