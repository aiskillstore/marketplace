{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://skillstore.io/schemas/marketplace.schema.json",
  "title": "Claude Code Plugin Marketplace",
  "description": "Schema for .claude-plugin/marketplace.json catalog file",
  "type": "object",
  "required": ["name", "owner", "plugins"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*$",
      "description": "Marketplace identifier (kebab-case, no spaces)",
      "examples": ["aiskillstore"]
    },
    "owner": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Organization or maintainer name"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Contact email for marketplace maintainer"
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string",
          "maxLength": 500,
          "description": "Brief marketplace description"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9.]+)?$",
          "description": "Semantic version of the marketplace catalog"
        },
        "pluginRoot": {
          "type": "string",
          "default": "./plugins",
          "description": "Base directory for plugin sources"
        },
        "homepage": {
          "type": "string",
          "format": "uri",
          "description": "Marketplace homepage URL"
        },
        "repository": {
          "type": "string",
          "format": "uri",
          "description": "Source repository URL"
        }
      }
    },
    "plugins": {
      "type": "array",
      "description": "List of available plugins",
      "items": {
        "$ref": "#/$defs/pluginEntry"
      }
    }
  },
  "$defs": {
    "pluginEntry": {
      "type": "object",
      "required": ["name", "source"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9-]*$",
          "description": "Plugin identifier (kebab-case)"
        },
        "source": {
          "type": "string",
          "description": "Relative path to plugin directory"
        },
        "description": {
          "type": "string",
          "maxLength": 200,
          "description": "Brief plugin description"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9.]+)?$"
        },
        "author": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "email": { "type": "string", "format": "email" }
          }
        },
        "category": {
          "type": "string",
          "enum": ["coding", "office", "data", "writing", "automation", "testing", "security", "other"],
          "description": "Plugin category"
        },
        "tags": {
          "type": "array",
          "items": { "type": "string" },
          "maxItems": 10,
          "description": "Tags for discovery"
        },
        "keywords": {
          "type": "array",
          "items": { "type": "string" },
          "maxItems": 20,
          "description": "SEO keywords"
        },
        "homepage": {
          "type": "string",
          "format": "uri"
        },
        "repository": {
          "type": "string",
          "format": "uri"
        },
        "license": {
          "type": "string",
          "description": "SPDX license identifier"
        }
      }
    }
  }
}
