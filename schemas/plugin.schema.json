{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://skillstore.io/schemas/plugin.schema.json",
  "title": "Claude Code Plugin Manifest",
  "description": "Schema for .claude-plugin/plugin.json manifest file",
  "type": "object",
  "required": ["name"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*$",
      "description": "Plugin identifier (kebab-case, must match directory name)"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9.]+)?$",
      "description": "Semantic version"
    },
    "description": {
      "type": "string",
      "maxLength": 200,
      "description": "Brief plugin description"
    },
    "author": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Author or organization name"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "homepage": {
      "type": "string",
      "format": "uri",
      "description": "Plugin homepage or documentation URL"
    },
    "repository": {
      "type": "string",
      "format": "uri",
      "description": "Source repository URL"
    },
    "license": {
      "type": "string",
      "description": "SPDX license identifier (e.g., MIT, Apache-2.0)"
    },
    "keywords": {
      "type": "array",
      "items": { "type": "string" },
      "maxItems": 20,
      "description": "Discovery keywords"
    },
    "skills": {
      "oneOf": [
        { "type": "string" },
        { "type": "array", "items": { "type": "string" } }
      ],
      "default": "./skills/",
      "description": "Path(s) to skill directories"
    },
    "commands": {
      "oneOf": [
        { "type": "string" },
        { "type": "array", "items": { "type": "string" } }
      ],
      "description": "Path(s) to command files or directories"
    },
    "agents": {
      "oneOf": [
        { "type": "string" },
        { "type": "array", "items": { "type": "string" } }
      ],
      "description": "Path(s) to agent definition files"
    },
    "hooks": {
      "oneOf": [
        { "type": "string" },
        { "type": "object" }
      ],
      "description": "Hook configuration file path or inline config"
    },
    "mcpServers": {
      "oneOf": [
        { "type": "string" },
        { "type": "object" }
      ],
      "description": "MCP server configuration file path or inline config"
    },
    "lspServers": {
      "oneOf": [
        { "type": "string" },
        { "type": "object" }
      ],
      "description": "LSP server configuration file path or inline config"
    }
  }
}
