{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://skillstore.io/schemas/plugin.schema.json",
  "title": "Claude Code Plugin Manifest",
  "description": "Schema based on official Claude Code plugin.json specification",
  "type": "object",
  "required": ["name"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*$",
      "description": "Unique identifier (kebab-case, no spaces)"
    },
    "version": {
      "type": "string",
      "description": "Semantic version"
    },
    "description": {
      "type": "string",
      "maxLength": 500,
      "description": "Brief explanation of plugin purpose"
    },
    "author": {
      "type": "object",
      "properties": {
        "name": { "type": "string", "description": "Author name" },
        "email": { "type": "string", "format": "email", "description": "Author email" },
        "url": { "type": "string", "format": "uri", "description": "Author URL" }
      }
    },
    "homepage": {
      "type": "string",
      "format": "uri",
      "description": "Documentation URL"
    },
    "repository": {
      "type": "string",
      "format": "uri",
      "description": "Source code URL"
    },
    "license": {
      "type": "string",
      "description": "License identifier (e.g., MIT, Apache-2.0)"
    },
    "keywords": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Discovery tags"
    },
    "commands": {
      "oneOf": [
        { "type": "string" },
        { "type": "array", "items": { "type": "string" } }
      ],
      "description": "Additional command files/directories"
    },
    "agents": {
      "oneOf": [
        { "type": "string" },
        { "type": "array", "items": { "type": "string" } }
      ],
      "description": "Additional agent files"
    },
    "skills": {
      "oneOf": [
        { "type": "string" },
        { "type": "array", "items": { "type": "string" } }
      ],
      "description": "Additional skill directories"
    },
    "hooks": {
      "oneOf": [
        { "type": "string" },
        { "type": "object" }
      ],
      "description": "Hook config path or inline config"
    },
    "mcpServers": {
      "oneOf": [
        { "type": "string" },
        { "type": "object" }
      ],
      "description": "MCP config path or inline config"
    },
    "outputStyles": {
      "oneOf": [
        { "type": "string" },
        { "type": "array", "items": { "type": "string" } }
      ],
      "description": "Additional output style files/directories"
    },
    "lspServers": {
      "oneOf": [
        { "type": "string" },
        { "type": "object" }
      ],
      "description": "LSP server configurations"
    }
  }
}
