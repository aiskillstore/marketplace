{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://skillstore.io/schemas/skill-report.schema.json",
  "title": "Skill Security Report",
  "type": "object",
  "required": ["meta", "security_audit"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["generated_at"],
      "properties": {
        "generated_at": { "type": "string", "format": "date-time" },
        "model": { "type": "string" },
        "source_url": { "type": "string" },
        "source_ref": { "type": "string" },
        "analysis_version": { "type": "string" }
      }
    },
    "security_audit": {
      "type": "object",
      "required": ["risk_level"],
      "properties": {
        "risk_level": {
          "type": "string",
          "enum": ["safe", "low", "medium", "high", "critical", "blocked"]
        },
        "should_block": { "type": "boolean" },
        "safe_to_publish": { "type": "boolean" },
        "summary": { "type": "string" },
        "critical_findings": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "locations": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "file": { "type": "string" },
                    "line_start": { "type": "integer" },
                    "line_end": { "type": "integer" }
                  }
                }
              },
              "title": { "type": "string" },
              "description": { "type": "string" },
              "files": { "type": "array", "items": { "type": "string" } }
            }
          }
        },
        "high_findings": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "locations": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "file": { "type": "string" },
                    "line_start": { "type": "integer" },
                    "line_end": { "type": "integer" }
                  }
                }
              },
              "title": { "type": "string" },
              "description": { "type": "string" },
              "files": { "type": "array", "items": { "type": "string" } }
            }
          }
        },
        "medium_findings": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "locations": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "file": { "type": "string" },
                    "line_start": { "type": "integer" },
                    "line_end": { "type": "integer" }
                  }
                }
              },
              "title": { "type": "string" },
              "description": { "type": "string" },
              "files": { "type": "array", "items": { "type": "string" } }
            }
          }
        },
        "low_findings": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "locations": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "file": { "type": "string" },
                    "line_start": { "type": "integer" },
                    "line_end": { "type": "integer" }
                  }
                }
              },
              "title": { "type": "string" },
              "description": { "type": "string" },
              "files": { "type": "array", "items": { "type": "string" } }
            }
          }
        },
        "files_scanned": { "type": "integer" },
        "total_lines": { "type": "integer" },
        "dangerous_patterns_found": { "type": "array", "items": { "type": "string" } }
      }
    },
    "content": {
      "type": "object",
      "properties": {
        "user_title": { "type": "string" },
        "value_statement": { "type": "string" },
        "seo_keywords": { "type": "array", "items": { "type": "string" } },
        "actual_capabilities": { "type": "array", "items": { "type": "string" } },
        "limitations": { "type": "array", "items": { "type": "string" } },
        "use_cases": { "type": "array" },
        "prompt_templates": { "type": "array" },
        "output_examples": { "type": "array" },
        "best_practices": { "type": "array", "items": { "type": "string" } },
        "anti_patterns": { "type": "array", "items": { "type": "string" } },
        "faq": { "type": "array" },
        "technical_requirements": { "type": "object" }
      }
    }
  }
}
