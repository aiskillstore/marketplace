    "actual_capabilities": [
      "Create new Word documents using docx-js library",
      "Edit existing documents with tracked changes (redlining)",
      "Add and manage comments in documents",
      "Unpack and repack DOCX files as ZIP archives",
      "Validate documents against OOXML XSD schemas",
      "Extract text content from documents"
    ],
    "limitations": [
      "Does not support real-time collaboration features",
      "Cannot edit documents without unpacking first",
      "Requires external tools (pandoc, LibreOffice) for some operations"
    ],
    "use_cases": [
      {
        "target_user": "Legal professionals",
        "title": "Review legal documents with tracked changes",
        "description": "Edit contracts and legal documents while maintaining full revision history for compliance and audit purposes"
      },
      {
        "target_user": "Technical writers",
        "title": "Create formatted documentation",
        "description": "Generate professional Word documents with proper styling, tables, images, and table of contents"
      },
      {
        "target_user": "Business analysts",
        "title": "Collaborate on business documents",
        "description": "Add comments, suggest changes, and review documents with colleagues using tracked changes"
      }
    ],
    "prompt_templates": [
      {
        "title": "Create simple document",
        "scenario": "Creating a basic Word document",
        "prompt": "Create a new Word document named report.docx with a title 'Quarterly Report', a heading 'Summary', and a paragraph of text."
      },
      {
        "title": "Edit with tracked changes",
        "scenario": "Editing an existing document with revisions",
        "prompt": "Edit existing-contract.docx to change '30 days' to '45 days' throughout the document using tracked changes."
      },
      {
        "title": "Add comments",
        "scenario": "Reviewing a document with feedback",
        "prompt": "Review draft.docx and add comments suggesting improvements to each section that needs clarification."
      },
      {
        "title": "Complex document structure",
        "scenario": "Creating documents with advanced formatting",
        "prompt": "Create a formal letter with company logo, table of data, numbered sections, and page numbers in the footer."
      }
    ],
    "output_examples": [
      {
        "input": "Create a simple Word document with a title, heading, and paragraph",
        "output": [
          "Created report.docx successfully",
          "Document structure:",
          "  - Title: 'Quarterly Report' (centered, Arial 28pt)",
          "  - Heading 1: 'Summary' (Arial 16pt)",
          "  - Paragraph: Three sentences of summary text",
          "To open: Open report.docx in Microsoft Word or LibreOffice"
        ]
      }
    ],
    "best_practices": [
      "Always unpack documents before editing to preserve original structure",
      "Use tracked changes for all edits to maintain audit trail",
      "Validate documents after editing to catch XML errors early"
    ],
    "anti_patterns": [
      "Modifying DOCX files directly without unpacking first",
      "Skipping validation after making edits",
      "Making edits without tracking changes in professional documents"
    ],
    "faq": [
      {
        "question": "Which tools is this skill compatible with?",
        "answer": "The skill works with Claude, Codex, and Claude Code for creating and editing Word documents."
      },
      {
        "question": "What file formats are supported?",
        "answer:": "Supports DOCX, PPTX, and XLSX files. Editing features focus on DOCX with tracked changes and comments."
      },
      {
        "question": "How do I edit a document?",
        "answer": "Unpack the DOCX file first using the unpack script, then create a Python script using the Document library to make changes, and repack when done."
      },
      {
        "question": "Is my data safe?",
        "answer": "The skill only accesses files within specified directories and uses secure XML parsing to prevent vulnerabilities."
      },
      {
        "question": "Why are tracked changes required?",
        "answer": "Tracked changes maintain a complete revision history, which is essential for legal, business, and collaborative documents."
      },
      {
        "question": "How does this compare to python-docx?",
        "answer": "This skill provides lower-level OOXML access for precise control over tracked changes and comments that python-docx does not support."
      }
    ]
