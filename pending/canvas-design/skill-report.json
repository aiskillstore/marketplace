  "content": {
    "user_title": "Create museum grade canvas art from a brief",
    "value_statement": "You need a striking visual artifact, but you do not want generic layouts. This skill creates a design philosophy and a crafted PNG or PDF canvas.",
    "seo_keywords": [
      "canvas design",
      "visual philosophy",
      "poster art",
      "PNG export",
      "PDF export",
      "Claude",
      "Codex",
      "Claude Code",
      "art direction",
      "typography"
    ],
    "actual_capabilities": [
      "Write a named design philosophy in a markdown file",
      "Render a single page canvas as PNG or PDF",
      "Embed subtle conceptual references in abstract composition",
      "Use fonts from the local canvas-fonts directory",
      "Keep text minimal and inside strict canvas margins",
      "Create multi-page outputs when requested"
    ],
    "limitations": [
      "Outputs only .md plus .png or .pdf files",
      "Avoids cartoony or low craft styles",
      "Does not copy existing artists or literal references",
      "May need clarification for very vague prompts"
    ],
    "use_cases": [
      {
        "target_user": "Brand designer",
        "title": "Concept poster draft",
        "description": "Create a high craft poster concept with minimal text for a new brand direction."
      },
      {
        "target_user": "Marketing lead",
        "title": "Campaign visual artifact",
        "description": "Produce a refined visual piece for a campaign teaser or landing page hero."
      },
      {
        "target_user": "Art director",
        "title": "Gallery style study",
        "description": "Generate a museum grade abstract study that can guide a larger series."
      }
    ],
    "prompt_templates": [
      {
        "title": "Simple poster brief",
        "scenario": "Beginner poster request",
        "prompt": "Create a single page PNG poster inspired by quiet coastal wind. Keep text minimal with one short phrase and include a matching design philosophy."
      },
      {
        "title": "Brand mood study",
        "scenario": "Mid level brand exploration",
        "prompt": "Design a PDF canvas for a boutique tea brand. Use a subtle botanical reference and a restrained palette. Provide the design philosophy first."
      },
      {
        "title": "Cultural artifact",
        "scenario": "Advanced abstract concept",
        "prompt": "Create a visual artifact that hints at early radio engineering without literal imagery. Use layered patterns and sparse labels. Output PNG and markdown."
      },
      {
        "title": "Multi page series",
        "scenario": "Advanced series request",
        "prompt": "Produce a three page PDF series based on a new visual philosophy about slow time. Each page should be distinct but related by rhythm and palette."
      }
    ],
    "output_examples": [
      {
        "input": "Make a poster inspired by alpine dusk with a subtle astronomy reference.",
        "output": [
          "Movement named Alpine Dusk, with a four paragraph manifesto on color and space",
          "One PNG canvas with layered gradients and precise geometric markers",
          "Short phrase placed with a thin font and wide margins"
        ]
      }
    ],
    "best_practices": [
      "Provide a clear mood or subject but allow abstract interpretation",
      "Ask for PNG or PDF and specify single or multi page output",
      "Mention any text you need and keep it short"
    ],
    "anti_patterns": [
      "Requesting copied styles or specific living artists",
      "Asking for long paragraphs of text on the canvas",
      "Combining many unrelated styles in one piece"
    ],
    "faq": [
      {
        "question": "Is this compatible with Claude, Codex, and Claude Code?",
        "answer": "Yes, it provides design guidance and canvas outputs that these platforms can follow."
      },
      {
        "question": "What are the output limits?",
        "answer": "It outputs one markdown file plus a PNG or PDF, unless you request multiple pages."
      },
      {
        "question": "Can I integrate this with my design workflow?",
        "answer": "Yes, you can supply briefs and use the PNG or PDF as a visual reference."
      },
      {
        "question": "Does it store or share my data?",
        "answer": "No, it only uses the prompt to generate local outputs."
      },
      {
        "question": "What if the result looks crowded or clipped?",
        "answer": "Ask for a refinement pass with more margins and fewer elements."
      },
      {
        "question": "How does it compare to generic poster prompts?",
        "answer": "It builds a design philosophy first, then enforces high craft visual composition."
      }
    ]
