  "content": {
    "user_title": "Create and review DOCX files with tracked changes",
    "value_statement": "You need reliable DOCX edits with comments and tracked changes. This skill unpacks, edits, validates, and repacks documents with safe OOXML handling.",
    "seo_keywords": [
      "DOCX editing",
      "OOXML",
      "tracked changes",
      "Word comments",
      "docx-js",
      "Claude",
      "Codex",
      "Claude Code",
      "document validation",
      "Office XML"
    ],
    "actual_capabilities": [
      "Unpack .docx, .pptx, and .xlsx files into editable XML with pretty formatting",
      "Pack directories back into Office files with XML condensation and optional soffice validation",
      "Validate DOCX XML against schemas and tracked change redlining rules",
      "Find XML nodes by line number, attributes, or text content for precise edits",
      "Add comments and replies with updates to comments and people files",
      "Apply tracked changes by suggesting deletions and reverting insertions or deletions"
    ],
    "limitations": [
      "Validation tool supports DOCX and PPTX only, not XLSX",
      "Document edits require an unpacked directory, not a raw DOCX file",
      "External tools are required for conversion and validation tasks",
      "DOCX creation depends on the docx JavaScript library being available"
    ],
    "use_cases": [
      {
        "target_user": "Legal reviewer",
        "title": "Track clause edits",
        "description": "Apply tracked changes and comments to contract sections while preserving author metadata and review history."
      },
      {
        "target_user": "Technical writer",
        "title": "Update release notes",
        "description": "Edit DOCX content in batches, validate structure, and repack for distribution."
      },
      {
        "target_user": "Compliance analyst",
        "title": "Audit document edits",
        "description": "Validate OOXML, check tracked changes, and confirm document integrity after edits."
      }
    ],
    "prompt_templates": [
      {
        "title": "Extract and locate text",
        "scenario": "Beginner wants to find a phrase",
        "prompt": "Unpack this DOCX and locate the phrase \"Data retention\" in document.xml. Report the paragraph and line number."
      },
      {
        "title": "Add a comment",
        "scenario": "Intermediate review task",
        "prompt": "Add a comment on the paragraph that contains \"Termination\" and save the updated files for repacking."
      },
      {
        "title": "Apply tracked changes",
        "scenario": "Advanced legal edit",
        "prompt": "Replace \"30 days\" with \"60 days\" using tracked changes only, preserving unchanged runs and author data."
      },
      {
        "title": "Validate and pack",
        "scenario": "Advanced publishing step",
        "prompt": "Validate the unpacked DOCX against schemas and redlining rules, then pack it into a final DOCX file."
      }
    ],
    "output_examples": [
      {
        "input": "Replace the date in Section 2 and add a comment explaining the change.",
        "output": [
          "Located Section 2 paragraph with the date and prepared a tracked change replacement.",
          "Inserted a comment spanning the updated date range with your explanation.",
          "Saved updated XML and prepared the directory for repacking."
        ]
      }
    ],
    "best_practices": [
      "Unpack and inspect word/document.xml before editing",
      "Batch tracked changes and validate after each batch",
      "Use precise get_node filters to avoid ambiguous edits"
    ],
    "anti_patterns": [
      "Editing packed DOCX files without unpacking and repacking",
      "Using unicode bullets instead of proper numbering in docx-js",
      "Modifying text inside another author tracked change"
    ],
    "faq": [
      {
        "question": "What file types are supported?",
        "answer": "Unpack and pack support DOCX, PPTX, and XLSX. Validation supports DOCX and PPTX only."
      },
      {
        "question": "What are the main limits?",
        "answer": "It requires unpacked directories and external tools for conversions and validation."
      },
      {
        "question": "How does it integrate with my workflow?",
        "answer": "Use unpack, edit with the Document library or docx-js, then validate and pack."
      },
      {
        "question": "Is my document data safe?",
        "answer": "All processing is local to the workflow and uses local files only."
      },
      {
        "question": "What if validation fails?",
        "answer": "Review the reported XML issues, fix the nodes, and run validation again."
      },
      {
        "question": "How does it compare to manual editing?",
        "answer": "It provides repeatable edits, tracked changes, and schema checks that manual editing lacks."
      }
    ]
