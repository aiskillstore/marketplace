        "target_user": "Legal reviewer",
        "title": "Track edits in contracts",
        "description": "Apply precise tracked changes and comments while preserving original wording and structure."
      },
      {
        "target_user": "Technical writer",
        "title": "Update manuals safely",
        "description": "Edit DOCX content and validate structure to avoid formatting breakage."
      },
      {
        "target_user": "Developer",
        "title": "Automate doc updates",
        "description": "Script repeatable changes across many OOXML files with validation."
      }
    ],
    "prompt_templates": [
      {
        "title": "Extract document text",
        "scenario": "You need a readable draft from a DOCX",
        "prompt": "Convert my file report.docx to markdown with tracked changes preserved and summarize the key sections."
      },
      {
        "title": "Add a comment",
        "scenario": "You want to comment on a specific paragraph",
        "prompt": "Unpack contract.docx, find the paragraph containing ‚Äútermination notice‚Äù, and add a comment asking for clarification."
      },
      {
        "title": "Apply tracked edits",
        "scenario": "You need precise redlining",
        "prompt": "Replace ‚Äú30 days‚Äù with ‚Äú60 days‚Äù using tracked changes only at the number, and keep surrounding text unchanged."
      },
      {
        "title": "Batch OOXML changes",
        "scenario": "You want multi change updates",
        "prompt": "Make three related text updates in Section 3 and Section 4 as one batch, then repack and validate the DOCX."
      }
    ],
    "output_examples": [
      {
        "input": "Update the DOCX to change the due date to July 15 and add a comment on the payment clause.",
        "output": [
          "Changed the due date text to July 15 with tracked insertion and deletion",
          "Added a comment on the payment clause asking for confirmation",
          "Repacked the document and noted validation status"
        ]
      }
    ],
    "best_practices": [
      "Unpack documents before editing and repack with validation",
      "Use tracked changes tags only around modified text",
      "Group related edits into small batches for easier review"
    ],
    "anti_patterns": [
      "Replacing entire paragraphs when only small text changes are needed",
      "Editing OOXML without checking schema or validation output",
      "Skipping backups before unpacking and modifying files"
    ],
    "faq": [
      {
