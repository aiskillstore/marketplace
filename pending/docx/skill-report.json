  "content": {
    "user_title": "Word Document Assistant",
    "value_statement": "Enables programmatic control over Microsoft Word documents, allowing you to create formatted files from scratch, perform complex edits like redlining and commenting on existing files, and extract content reliably.",
    "seo_keywords": [
      "docx editor",
      "word document automation",
      "redlining tool",
      "python docx",
      "track changes automation",
      "ooxml editing"
    ],
    "actual_capabilities": [
      "Create new professional DOCX files using the `docx` JavaScript library",
      "Edit existing DOCX files using Python scripts and direct XML manipulation",
      "Apply tracked changes (redlining) to existing documents programmatically",
      "Add comments and replies to specific parts of a document",
      "Convert DOCX files to Markdown, PDF, or Images for analysis",
      "Unpack and pack DOCX (ZIP/XML) structures",
      "Validate OOXML structure and schema compliance"
    ],
    "limitations": [
      "Editing requires unpacking the document structure, which can be complex for simple text changes",
      "JavaScript `docx` library is for creation only; editing uses Python `document.py` library",
      "Requires external dependencies (LibreOffice, Pandoc) for some conversion features"
    ],
    "use_cases": [
      {
        "title": "Contract Review & Redlining",
        "description": "Analyze a legal agreement and automatically apply tracked changes to specific clauses based on a playbook.",
        "target_user": "Legal Tech, Administrative Assistants"
      },
      {
        "title": "Automated Report Generation",
        "description": "Create polished, styled Word documents from raw data or analysis results.",
        "target_user": "Analysts, Developers"
      },
      {
        "title": "Document Feedback",
        "description": "Review a draft and insert comments or replies programmatically.",
        "target_user": "Editors, Managers"
      }
    ],
    "prompt_templates": [
      {
        "title": "Create New Document",
        "prompt": "Create a new Word document titled 'Project Plan.docx' with a title, a brief introduction paragraph, and a table with 3 columns.",
        "scenario": "Generating a new file from scratch"
      },
      {
        "title": "Redline Edit",
        "prompt": "Read 'contract.docx'. Change the payment term from '30 days' to '45 days' using tracked changes (redlining) and save as 'contract_revised.docx'.",
        "scenario": "Modifying an existing file"
      }
    ],
    "output_examples": [
      {
        "input": "Unpack 'document.docx' and list its internal structure.",
        "output": "Unpacked to 'unpacked/'. Directory contains: [Content_Types].xml, word/document.xml, word/styles.xml, ..."
      }
    ],
    "best_practices": [
      "Use `docx-js` (JavaScript) for creating NEW documents.",
      "Use the Python `Document` class for EDITING existing documents to ensure XML validity.",
      "Always use the `validate` script after modifying XML directly.",
      "When redlining, batch changes logically (e.g., by section) to make debugging easier.",
      "Use `pandoc` for extracting text content for analysis."
    ],
    "anti_patterns": [
      "Attempting to edit DOCX files by treating them as plain text.",
      "Ignoring XML namespaces or `mc:Ignorable` attributes when modifying document XML.",
      "Modifying `document.xml` without updating referenced relationships in `_rels`.",
      "Using `\n` for line breaks instead of proper `Paragraph` elements."
    ],
    "faq": [
      {
        "question": "Why do I need to unpack the document?",
        "answer": "DOCX files are ZIP archives of XML files. Unpacking allows you to access and modify the raw XML structure directly."
      },
      {
        "question": "Can I use the JavaScript library to edit files?",
        "answer": "No, the `docx` JS library is optimized for creating new files. Use the provided Python scripts for editing existing content."
      }
    ],
    "technical_requirements": {
      "dependencies": [
        "node.js & npm (docx package)",
        "python3 (defusedxml)",
        "pandoc (for text extraction)",
        "libreoffice (soffice, for validation/conversion)",
        "poppler-utils (for image conversion)"
      ],
      "permissions": [
        "file_system_read_write",
        "execute_command"
      ],
      "complexity": "advanced"
    }
