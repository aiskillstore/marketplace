    "user_title": "Word Document Toolkit",
    "value_statement": "A complete suite for programmatically creating, editing, and reviewing Word documents with support for complex features like tracked changes and comments.",
    "seo_keywords": [
      "docx editing",
      "word automation",
      "ooxml",
      "tracked changes",
      "redlining",
      "document generation"
    ],
    "actual_capabilities": [
      "Create new .docx files using JavaScript/TypeScript",
      "Edit existing .docx files via Python OOXML manipulation",
      "Implement tracked changes (Redlining) programmatically",
      "Add and reply to comments in documents",
      "Extract text and analyze document structure",
      "Validate OOXML structure and tracked changes integrity"
    ],
    "limitations": [
      "Requires external dependencies (pandoc, LibreOffice, Node.js) for full functionality",
      "Complex formatting changes require direct XML manipulation",
      "Images must be handled via specific XML embedding patterns"
    ],
    "use_cases": [
      {
        "title": "Legal Contract Review",
        "description": "Analyze a contract and apply specific edits using tracked changes (redlining) for attorney review.",
        "target_user": "Legal Professionals / Assistants"
      },
      {
        "title": "Automated Report Generation",
        "description": "Generate polished monthly reports with tables, headers, and formatting from raw data.",
        "target_user": "Data Analysts"
      },
      {
        "title": "Document Batch Processing",
        "description": "Programmatically update specific clauses or metadata across a large set of existing documents.",
        "target_user": "Developers"
      }
    ],
    "prompt_templates": [
      {
        "title": "Redline Document",
        "prompt": "Read this document and implement the following changes as tracked changes: [list changes].",
        "scenario": "Editing a document while preserving history"
      },
      {
        "title": "Create Report",
        "prompt": "Create a new Word document for a [topic] report. Include a title page, table of contents, and sections for [sections].",
        "scenario": "Generating a new file from scratch"
      }
    ],
    "output_examples": [
      {
        "input": "Change '30 days' to '45 days' with tracking.",
        "output": "<w:r><w:t>within </w:t></w:r><w:del><w:r><w:delText>30</w:delText></w:r></w:del><w:ins><w:r><w:t>45</w:t></w:r></w:ins><w:r><w:t> days</w:t></w:r>"
      }
    ],
    "best_practices": [
      "Always read ooxml.md or docx-js.md fully before starting implementation",
      "Use the 'Redlining workflow' for editing documents to ensure changes are tracked properly",
      "Batch related changes to improve efficiency and debugging",
      "Validate XML structure before repacking documents"
    ],
    "anti_patterns": [
      "Replacing entire paragraphs for minor text changes (breaks change tracking)",
      "Using Unicode bullets instead of proper list numbering configuration",
      "Modifying text inside another author's tracked changes"
    ],
    "faq": [
      {
        "question": "How do I edit text without breaking tracking?",
        "answer": "Use the Document library's `replace_node` or `suggest_deletion` methods, which handle the underlying XML to preserve edit history."
      },
      {
        "question": "Can I convert DOCX to PDF?",
        "answer": "Yes, using the `soffice` (LibreOffice) command provided in the tools."
      }
    ],
