  "content": {
    "user_title": "Create PowerPoint slides from HTML",
    "value_statement": "Building or editing PPTX files by hand is slow and error prone. This skill converts HTML to slides and supports reliable PPTX editing workflows.",
    "seo_keywords": [
      "PowerPoint automation",
      "pptx editing",
      "HTML to PPTX",
      "OOXML tools",
      "slide thumbnails",
      "Claude",
      "Codex",
      "Claude Code",
      "PptxGenJS",
      "presentation workflows"
    ],
    "actual_capabilities": [
      "Convert HTML slides to PPTX with positioned text, images, and shapes",
      "Extract structured text inventory from PPTX into JSON",
      "Apply formatted text replacements back into PPTX",
      "Generate slide thumbnail grids with optional placeholder outlines",
      "Unpack, validate, and repack PPTX OOXML directories"
    ],
    "limitations": [
      "Requires Python and Node dependencies such as python-pptx, Playwright, and Sharp",
      "Gradients and icons must be rasterized before HTML conversion",
      "HTML conversion supports web safe fonts only",
      "Validation tools focus on Office XML and may not cover every visual issue"
    ],
    "use_cases": [
      {
        "target_user": "Analyst",
        "title": "Automate report slides",
        "description": "Generate weekly KPI decks from HTML templates and update text safely."
      },
      {
        "target_user": "Designer",
        "title": "Prototype slide layouts",
        "description": "Turn HTML mockups into PPTX and review layouts with thumbnail grids."
      },
      {
        "target_user": "Trainer",
        "title": "Revise course decks",
        "description": "Extract text, update lessons, and replace content across many slides."
      }
    ],
    "prompt_templates": [
      {
        "title": "Start a simple deck",
        "scenario": "Create a basic 5 slide outline",
        "prompt": "Create a 5 slide PPTX from HTML with a title slide and four section slides. Use a clean blue and gray palette and export the file."
      },
      {
        "title": "Update slide text",
        "scenario": "Replace specific slide content",
        "prompt": "Extract text inventory from deck.pptx, update the revenue figures on slide 3, and write a new PPTX with the same layout."
      },
      {
        "title": "Template based build",
        "scenario": "Follow an existing template",
        "prompt": "Use template.pptx as a design guide, create a 6 slide deck with matching layout patterns, and generate thumbnails for review."
      },
      {
        "title": "Advanced OOXML edit",
        "scenario": "Edit XML and validate",
        "prompt": "Unpack deck.pptx, update speaker notes on slide 2, validate the XML, and repack into deck-updated.pptx."
      }
    ],
    "output_examples": [
      {
        "input": "Convert these HTML slides into a PPTX and show a thumbnail grid for review.",
        "output": [
          "Created a 12 slide PPTX from the provided HTML files",
          "Generated a thumbnail grid image for visual review",
          "No overflow or layout errors detected"
        ]
      }
    ],
    "best_practices": [
      "Match HTML body dimensions to the PPTX layout size",
      "Validate after OOXML edits before repacking",
      "Review thumbnail grids to catch overflow and overlap"
    ],
    "anti_patterns": [
      "Use CSS gradients directly in HTML slides",
      "Place text directly in div elements without p or h tags",
      "Skip validation after editing OOXML files"
    ],
    "faq": [
      {
        "question": "Which PowerPoint versions are supported?",
        "answer": "The skill works with standard PPTX files used by modern PowerPoint versions."
      },
      {
        "question": "What limits exist on fonts and styling?",
        "answer": "HTML conversion supports only web safe fonts and requires rasterized gradients or icons."
      },
      {
        "question": "Can I integrate with existing templates?",
        "answer": "Yes, you can analyze a template and build new slides that match its layout."
      },
      {
        "question": "How is my presentation data handled?",
        "answer": "Processing occurs locally in the workflow tools and uses your provided files."
      },
      {
        "question": "What if validation fails?",
        "answer": "Fix XML issues and rerun validation before repacking the PPTX."
      },
      {
        "question": "How does this compare to manual editing?",
        "answer": "It automates repeatable tasks and reduces errors while keeping PPTX structure intact."
      }
    ]
  },
