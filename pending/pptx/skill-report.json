  "content": {
    "user_title": "PowerPoint Automation Toolkit",
    "value_statement": "A robust suite of tools for creating pixel-perfect presentations from HTML, bulk-editing slide content, and analyzing presentation structure using direct OOXML manipulation.",
    "seo_keywords": [
      "powerpoint automation",
      "pptx generator",
      "html to pptx",
      "slide deck automation",
      "ooxml editing",
      "python-pptx"
    ],
    "actual_capabilities": [
      "Convert HTML/CSS layouts into native PowerPoint slides with accurate positioning",
      "Extract structured text inventories from presentations",
      "Perform bulk text replacements while preserving formatting",
      "Rearrange, duplicate, and delete slides based on templates",
      "Generate image thumbnails for slides",
      "Unpack, edit, validate, and repack raw OOXML data"
    ],
    "limitations": [
      "Thumbnail generation requires LibreOffice and Poppler tools installed",
      "HTML-to-PPTX conversion requires a Node.js environment with Playwright",
      "Complex animations may require manual verification after rearrangement"
    ],
    "use_cases": [
      {
        "title": "Automated Report Generation",
        "description": "Generate monthly business reports by converting dynamic HTML data visualizations into native editable PowerPoint slides.",
        "target_user": "Data Analysts, Business Intelligence Developers"
      },
      {
        "title": "Presentation Localization",
        "description": "Extract all text from a deck into a JSON inventory, translate it, and re-inject it into the slides while preserving layout.",
        "target_user": "Localization Teams, Marketing Managers"
      },
      {
        "title": "Template-Based Creation",
        "description": "Create a new deck by reordering slides from a corporate template and filling in placeholders programmatically.",
        "target_user": "Sales Enablement, Consultants"
      }
    ],
    "prompt_templates": [
      {
        "title": "Create Presentation from Content",
        "prompt": "Create a 5-slide presentation about [Topic] using the [Template.pptx]. First analyze the template to understand the layout, then map my content to the appropriate slides, and finally generate the file.",
        "scenario": "Creating a new deck based on a specific design system"
      },
      {
        "title": "Analyze and Summarize Deck",
        "prompt": "Extract the text from this presentation, summarize the key points, and generate a thumbnail grid of the slides for reference.",
        "scenario": "Reviewing a large presentation quickly"
      }
    ],
    "output_examples": [
      {
        "input": "python scripts/inventory.py presentation.pptx inventory.json",
        "output": "Found text in 12 slides with 45 text elements. Output saved to: inventory.json"
      },
      {
        "input": "node html2pptx.js",
        "output": "Presentation created successfully! (Saved as output.pptx)"
      }
    ],
    "best_practices": [
      "Use the 'html2pptx' workflow for creating new slides with complex layouts to ensure pixel-perfect positioning.",
      "Always validate XML changes using the provided `validate.py` script when editing raw OOXML.",
      "Use the 'inventory' and 'replace' scripts for text changes to ensure formatting is preserved."
    ],
    "anti_patterns": [
      "Directly modifying the XML strings without parsing/re-serializing (prone to corruption).",
      "Using CSS gradients in HTML input (not supported by PowerPoint, must be rasterized first).",
      "Stacking charts vertically in a single column (use two-column layouts for better readability)."
    ],
    "faq": [
      {
        "question": "Does this support animations?",
        "answer": "The `html2pptx` tool focuses on static layout fidelity. For animations, you would typically apply them to the generated objects using the PptxGenJS API or edit the OOXML directly."
      },
      {
        "question": "Can I use custom fonts?",
        "answer": "Yes, but for maximum compatibility across devices, it is recommended to use standard web-safe fonts listed in the documentation."
      }
    ],
    "technical_requirements": {
      "dependencies": [
        "python-pptx",
        "markitdown",
        "defusedxml",
        "lxml",
        "Pillow",
        "pptxgenjs (Node.js)",
        "playwright (Node.js)",
        "sharp (Node.js)"
      ],
      "permissions": [
        "File System Read/Write",
        "Execute External Commands (soffice, pdftoppm)"
      ],
      "complexity": "intermediate"
    }
