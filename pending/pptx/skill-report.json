  "content": {
    "user_title": "Build and edit PPTX presentations",
    "value_statement": "You need to create or edit PPTX files with precise layout and text control. This skill converts HTML to slides and edits OOXML content with validation workflows.",
    "seo_keywords": [
      "pptx automation",
      "PowerPoint editing",
      "OOXML",
      "presentation templates",
      "slide thumbnails",
      "html2pptx",
      "Claude",
      "Codex",
      "Claude Code",
      "PptxGenJS"
    ],
    "actual_capabilities": [
      "Convert HTML slides to PPTX with accurate positioning and layout validation",
      "Extract placeholder positions from HTML elements marked with class placeholder",
      "Generate slide thumbnail grids and optionally outline text placeholders",
      "Extract structured text inventory with formatting, positions, and overflow detection",
      "Replace text and formatting in PPTX shapes using a replacement JSON file",
      "Rearrange and duplicate template slides into a new presentation"
    ],
    "limitations": [
      "Edits focus on text and formatting, not complex animation or media editing",
      "Requires external tools for some workflows, such as Playwright or LibreOffice",
      "HTML slide dimensions must match presentation layout settings",
      "Works only with Office Open XML files such as PPTX"
    ],
    "use_cases": [
      {
        "target_user": "Marketing manager",
        "title": "Refresh a template deck",
        "description": "Duplicate and reorder template slides, then replace placeholder text with campaign content."
      },
      {
        "target_user": "Data analyst",
        "title": "Fix slide text issues",
        "description": "Extract text inventory, detect overflow, and update text to fit cleanly on slides."
      },
      {
        "target_user": "Design lead",
        "title": "Create new slide layouts",
        "description": "Build HTML slides with exact positioning and convert them into PPTX."
      }
    ],
    "prompt_templates": [
      {
        "title": "Create simple deck",
        "scenario": "New presentation from scratch",
        "prompt": "Create a 5 slide PPTX about quarterly goals using HTML slides at 16:9. Use a clear hierarchy and web safe fonts."
      },
      {
        "title": "Edit existing deck",
        "scenario": "Replace placeholder text",
        "prompt": "Extract text inventory from deck.pptx and update slide titles and bullets. Preserve alignment and font sizes."
      },
      {
        "title": "Template based build",
        "scenario": "Use a corporate template",
        "prompt": "Rearrange template slides 0, 3, 3, 5 into a new deck, then replace text to match the provided outline."
      },
      {
        "title": "Quality check",
        "scenario": "Detect layout issues",
        "prompt": "Run inventory with issues only and report any text overflow or overlap, then suggest fixes."
      }
    ],
    "output_examples": [
      {
        "input": "Create a 3 slide product overview deck with a title slide, features slide, and pricing slide.",
        "output": [
          "Slide 1: Title and subtitle centered with brand colors",
          "Slide 2: Two column layout with feature bullets and an image placeholder",
          "Slide 3: Pricing tiers with clear labels and call to action"
        ]
      }
    ],
    "best_practices": [
      "Match HTML dimensions to the PPTX layout before conversion",
      "Review thumbnail grids to catch text cutoff and overlap early",
      "Keep replacement text aligned with shape sizes and formatting"
    ],
    "anti_patterns": [
      "Ignoring validation after editing OOXML files",
      "Overfilling text shapes without checking overflow",
      "Using layouts with more placeholders than content"
    ],
    "faq": [
      {
        "question": "What PPTX versions are supported?",
        "answer": "It works with Office Open XML PPTX files created by modern PowerPoint and compatible tools."
      },
      {
        "question": "Are there limits on slide count?",
        "answer": "There is no hard limit, but large decks may take longer to render or validate."
      },
      {
        "question": "Can it integrate with HTML workflows?",
        "answer": "Yes, it converts HTML slides to PPTX using Playwright and pptxgenjs."
      },
      {
        "question": "Is my data sent to external services?",
        "answer": "No, the workflows operate on local files unless you choose to use external tools."
      },
      {
        "question": "What if validation fails after edits?",
        "answer": "Fix the XML issues and rerun validation before packing the PPTX again."
      },
      {
        "question": "How does this compare to manual editing?",
        "answer": "It offers repeatable, scriptable edits and layout checks instead of manual slide changes."
      }
    ]
  },
