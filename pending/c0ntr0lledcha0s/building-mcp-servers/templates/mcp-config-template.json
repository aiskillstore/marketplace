{
  "mcpServers": {
    "example-stdio-server": {
      "type": "stdio",
      "command": "node",
      "args": ["${CLAUDE_PLUGIN_ROOT}/servers/example-server.js"],
      "env": {
        "API_KEY": "${EXAMPLE_API_KEY}",
        "DEBUG": "false"
      }
    },
    "example-http-server": {
      "type": "http",
      "url": "https://api.example.com/mcp",
      "headers": {
        "Authorization": "Bearer ${HTTP_API_KEY}",
        "Content-Type": "application/json"
      }
    },
    "example-sse-server": {
      "type": "sse",
      "url": "https://api.example.com/mcp/sse",
      "headers": {
        "Authorization": "Bearer ${SSE_API_KEY}"
      }
    },
    "example-websocket-server": {
      "type": "websocket",
      "url": "wss://api.example.com/mcp/ws",
      "headers": {
        "Authorization": "Bearer ${WS_API_KEY}"
      }
    }
  }
}
