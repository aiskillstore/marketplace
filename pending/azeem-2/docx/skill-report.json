  "content": {
    "user_title": "Create and edit Word documents with tracked changes",
    "value_statement": "Users need to create professional Word documents and make edits with proper tracked changes. This skill provides tools for document creation, modification, comment management, and validation ensuring document integrity.",
    "seo_keywords": [
      "docx",
      "word document",
      "claude code",
      "claude",
      "codex",
      "tracked changes",
      "document editing",
      "office documents",
      "word processing",
      "document creation"
    ],
    "actual_capabilities": [
      "Create new Word documents with JavaScript/TypeScript using docx-js library",
      "Edit existing documents with Python Document library for OOXML manipulation",
      "Add and manage tracked changes using redlining workflow",
      "Add comments and replies to document sections",
      "Validate documents against XSD schemas and redlining rules",
      "Extract text content and convert documents to markdown"
    ],
    "limitations": [
      "Requires external tools: pandoc, LibreOffice, defusedxml",
      "Cannot edit encrypted or password-protected documents",
      "Complex formatting may require manual adjustment",
      "Visual document conversion requires PDF intermediate step"
    ],
    "use_cases": [
      {
        "target_user": "Legal professionals",
        "title": "Review contracts with tracked changes",
        "description": "Make edits to legal documents while preserving author attribution and change history"
      },
      {
        "target_user": "Technical writers",
        "title": "Collaborate on documentation",
        "description": "Create and edit Word documents with proper formatting, comments, and revision tracking"
      },
      {
        "target_user": "Business users",
        "title": "Prepare business documents",
        "description": "Generate professional Word documents with tables, headers, and formatting"
      }
    ],
    "prompt_templates": [
      {
        "title": "Create simple document",
        "scenario": "Create a basic Word document",
        "prompt": "Create a new Word document named report.docx with a title 'Quarterly Report', a heading 'Q1 Summary', and 3 paragraphs of placeholder text."
      },
      {
        "title": "Edit with tracked changes",
        "scenario": "Edit document with revisions",
        "prompt": "Edit the document at document.docx to change '30 days' to '45 days' in Section 2. Use tracked changes and add a comment explaining this modification."
      },
      {
        "title": "Add comments",
        "scenario": "Review document with feedback",
        "prompt": "Add a comment to the paragraph containing 'payment terms' in the contract.docx document. The comment should say 'Please verify this amount matches the invoice.'"
      },
      {
        "title": "Batch edit workflow",
        "scenario": "Apply multiple edits systematically",
        "prompt": "Review document.docx and make the following changes using tracked changes: (1) Update all date references to 2025, (2) Change company name from 'ABC Corp' to 'XYZ Inc', (3) Add a new paragraph after the signature block."
      }
    ],
    "output_examples": [
      {
        "input": "Create a simple Word document with a title, heading, and 2 paragraphs",
        "output": [
          "Created document.docx successfully",
          "Document contains: Title 'My Document', Heading 'Introduction', Paragraph 1 with sample text, Paragraph 2 with sample text",
          "To view: open document.docx in Microsoft Word or LibreOffice"
        ]
      }
    ],
    "best_practices": [
      "Always validate documents after editing to ensure OOXML compliance",
      "Use tracked changes for all modifications to maintain edit history",
      "Group related edits into batches of 3-10 changes for easier review",
      "Extract text to markdown first to verify document contents before editing"
    ],
    "anti_patterns": [
      "Modifying text directly without tracked changes - this hides edit history",
      "Skipping validation - corrupt documents may not open correctly",
      "Making large batches of unrelated changes at once - harder to review",
      "Ignoring the redlining workflow for legal or official documents"
    ],
    "faq": [
      {
        "question": "What file formats are supported?",
        "answer": "Supports .docx files for Word documents. Can also work with .pptx and .xlsx for validation."
      },
      {
        "question": "What are the size limits?",
        "answer": "Handles documents of any size within system memory. Very large documents may take longer to process."
      },
      {
        "question": "Can I use this with other Office tools?",
        "answer": "Integrates with pandoc for markdown conversion and LibreOffice for PDF/image conversion."
      },
      {
        "question": "Is my document data safe?",
        "answer": "Processes files locally in temporary directories. No data is sent to external servers."
      },
      {
        "question": "Why does validation fail?",
        "answer": "Common causes: invalid XML structure, missing required elements, or incorrect namespace declarations."
      },
      {
        "question": "How does this differ from other document tools?",
        "answer": "Provides tracked changes with proper author attribution, schema validation, and structured editing workflows."
      }
    ]
