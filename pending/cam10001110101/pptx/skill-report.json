    "prompt_templates": [
      {
        "title": "Create simple slides",
        "scenario": "Generate basic slides",
        "prompt": "Create a PowerPoint presentation about {topic} with {n} slides using html2pptx. Include a title slide and 2 content slides with bullet points."
      },
      {
        "title": "Edit template slides",
        "scenario": "Modify existing presentation",
        "prompt": "Use the template at {template.pptx} to create a new presentation. Use slides 0, 3, 5, and 8 in that order, then replace the text with the content from {content.json}."
      },
      {
        "title": "Generate thumbnail grid",
        "scenario": "Visual analysis",
        "prompt": "Create a thumbnail grid of all slides in {presentation.pptx} with 4 columns. Outline the text placeholders so I can see the layout structure."
      },
      {
        "title": "Full presentation workflow",
        "scenario": "Complete presentation creation",
        "prompt": "Create a complete presentation: First analyze the template at {template.pptx} and create an inventory. Then plan an outline for {topic}. Finally create the presentation using html2pptx with proper design and colors matching the topic."
      }
    ],
    "output_examples": [
      {
        "input": "Create a 5-slide presentation about quarterly results using the sales template",
