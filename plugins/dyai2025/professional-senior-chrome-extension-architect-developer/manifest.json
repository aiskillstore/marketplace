{
  "manifest_version": 3,
  "name": "AI SEO Analyzer",
  "short_name": "SEO Analyzer",
  "description": "Analyze on-page SEO factors with optional AI suggestions directly from a popup or content context.",
  "version": "1.0.0",
  "action": {
    "default_title": "AI SEO Analyzer",
    "default_popup": "dist/ui/popup.html"
  },
  "background": {
    "service_worker": "dist/background/index.js",
    "type": "module"
  },
  "permissions": ["activeTab", "scripting", "storage", "offscreen", "tabs"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["dist/content/index.js"],
      "run_at": "document_idle"
    }
  ],
  "offscreen_documents": [
    {
      "matches": ["<all_urls>"],
      "html": ["dist/background/offscreen.html"],
      "reason": "DOM_SCRAPING",
      "justification": "Analyze markup in an isolated, non-visible document without touching the active tab."
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["dist/background/offscreen.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
