  "content": {
    "user_title": "Create and edit PowerPoint presentations with precision",
    "value_statement": "Stop wrestling with PowerPoint's limitations. This skill converts HTML designs to pixel-perfect slides and edits existing presentations with surgical precision. Create professional presentations faster than ever.",
    "seo_keywords": [
      "powerpoint creation",
      "pptx editing",
      "presentation automation",
      "html to powerpoint",
      "Claude presentations",
      "Claude Code office",
      "slide generation",
      "OOXML editing",
      "pptxgenjs",
      "office documents"
    ],
    "actual_capabilities": [
      "Convert HTML/CSS slides to PowerPoint with exact positioning",
      "Edit existing presentations by modifying OOXML directly",
      "Extract and replace text while preserving formatting",
      "Create thumbnail grids for visual presentation analysis",
      "Validate presentation XML against Office schemas",
      "Rearrange, duplicate, and delete slides programmatically"
    ],
    "limitations": [
      "Requires LibreOffice installation for PDF conversion features",
      "HTML-to-PPTX conversion needs Playwright for rendering",
      "Complex animations and transitions not supported",
      "Limited to web-safe fonts for cross-platform compatibility"
    ],
    "use_cases": [
      {
        "target_user": "Business analysts",
        "title": "Automated report presentations",
        "description": "Convert data visualizations and charts from web dashboards directly into executive-ready PowerPoint slides with proper branding and layout."
      },
      {
        "target_user": "Marketing teams",
        "title": "Template-based pitch decks",
        "description": "Rapidly create customized pitch decks by mixing and matching slides from existing templates while maintaining consistent branding."
      },
      {
        "target_user": "Educators and trainers",
        "title": "Curriculum slide generation",
        "description": "Build educational presentations from HTML content with proper formatting, images, and interactive elements converted to static slides."
      }
    ],
    "prompt_templates": [
      {
        "title": "Create from HTML",
        "scenario": "You have HTML content that needs to become a presentation",
        "prompt": "Convert this HTML to a PowerPoint presentation using html2pptx: [HTML content]. Ensure all text is in proper tags and create a 16:9 presentation."
      },
      {
        "title": "Edit existing presentation",
        "scenario": "Need to update text in an existing PowerPoint file",
        "prompt": "Extract the text inventory from presentation.pptx, then replace the title on slide 0 with 'New Title' and update bullet points on slide 2."
      },
      {
        "title": "Template-based creation",
        "scenario": "Create new presentation using existing template",
        "prompt": "Use template.pptx to create a new presentation. Create an inventory of available slides, then select appropriate layouts for a 5-slide presentation about [topic]."
      },
      {
        "title": "Batch thumbnail generation",
        "scenario": "Need visual overview of multiple presentations",
        "prompt": "Create thumbnail grids for all PPTX files in this directory with 4 columns each, saved as 'overview-[filename].jpg' for quick review."
      }
    ],
    "output_examples": [
      {
        "input": "Create a presentation from this HTML about quarterly results",
        "output": [
          "âœ“ Created presentation with 8 slides from HTML",
          "âœ“ Added charts to placeholder areas",
          "âœ“ Applied consistent 16:9 formatting",
          "âœ“ Generated thumbnails for review",
          "âœ“ Saved as quarterly-results.pptx"
        ]
      }
    ],
    "best_practices": [
      "Always validate HTML dimensions match PowerPoint layout before conversion",
      "Use placeholder divs with class='placeholder' for chart/table insertion points",
      "Rasterize complex visuals (gradients, SVG icons) as PNGs before HTML conversion",
      "Test presentations in PowerPoint after creation to verify formatting"
    ],
    "anti_patterns": [
      "Don't use manual bullet symbols (â€¢, -, *) in HTML - use proper <ul>/<ol> tags",
      "Never apply backgrounds/borders to text elements - only use <div> elements",
      "Avoid CSS gradients in HTML - pre-render as PNG images instead",
      "Don't skip validation after OOXML editing - always run validate.py"
    ],
    "faq": [
      {
        "question": "Which PowerPoint features are supported?",
        "answer": "Full text formatting, images, shapes, charts, tables, and layouts. Animations and advanced transitions are not supported."
      },
      {
        "question": "Can I use custom fonts?",
        "answer": "Only web-safe fonts (Arial, Times, Verdana, etc.) are recommended for cross-platform compatibility."
      },
      {
        "question": "How do I add charts to presentations?",
        "answer": "Create placeholder divs in HTML with class='placeholder', then use PptxGenJS to add charts after HTML conversion."
      },
      {
        "question": "Is LibreOffice required?",
        "answer": "Only for PDF conversion features. Core PowerPoint creation and editing works without it."
      },
      {
        "question": "Can I edit existing presentations?",
        "answer": "Yes, unpack the PPTX to XML, edit the files directly, then repack. Always validate after changes."
      },
      {
        "question": "What's the maximum presentation size?",
        "answer": "Limited by available system memory. Large presentations may require processing in batches."
      }
    ]
  },
