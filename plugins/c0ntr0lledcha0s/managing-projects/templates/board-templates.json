{
  "sprint": {
    "name": "Sprint Planning Board",
    "description": "Scrum-style sprint board with backlog, sprint, and progress tracking",
    "columns": ["Backlog", "Sprint", "In Progress", "Review", "Done"],
    "fields": {
      "Status": {
        "type": "SingleSelect",
        "options": ["Backlog", "Sprint", "In Progress", "Review", "Done"]
      },
      "Priority": {
        "type": "SingleSelect",
        "options": ["High", "Medium", "Low"]
      },
      "Story Points": {
        "type": "SingleSelect",
        "options": ["1", "2", "3", "5", "8", "13", "21"]
      },
      "Sprint": {
        "type": "Iteration",
        "duration": 14,
        "startDay": 1
      }
    },
    "views": [
      {
        "name": "Sprint Board",
        "type": "board",
        "groupBy": "Status"
      },
      {
        "name": "Backlog",
        "type": "table",
        "filter": "Status:Backlog",
        "sortBy": "Priority"
      }
    ],
    "automation": {
      "autoAdd": "label:sprint",
      "autoArchive": "Status:Done AND closed:>30days"
    }
  },
  "kanban": {
    "name": "Kanban Workflow Board",
    "description": "Simple kanban board for continuous flow",
    "columns": ["Todo", "In Progress", "Review", "Done"],
    "fields": {
      "Status": {
        "type": "SingleSelect",
        "options": ["Todo", "In Progress", "Review", "Done"]
      },
      "Priority": {
        "type": "SingleSelect",
        "options": ["High", "Medium", "Low"]
      },
      "Size": {
        "type": "SingleSelect",
        "options": ["XS", "S", "M", "L", "XL"]
      },
      "Assignee": {
        "type": "Assignee"
      }
    },
    "views": [
      {
        "name": "Board",
        "type": "board",
        "groupBy": "Status"
      },
      {
        "name": "By Assignee",
        "type": "table",
        "groupBy": "Assignee"
      }
    ],
    "automation": {
      "autoAdd": "is:issue OR is:pr",
      "autoArchive": "Status:Done AND closed:>14days"
    }
  },
  "roadmap": {
    "name": "Product Roadmap",
    "description": "Timeline-based roadmap for planning features",
    "columns": ["Planned", "In Progress", "Completed"],
    "fields": {
      "Status": {
        "type": "SingleSelect",
        "options": ["Planned", "In Progress", "Completed"]
      },
      "Quarter": {
        "type": "SingleSelect",
        "options": ["Q1", "Q2", "Q3", "Q4"]
      },
      "Priority": {
        "type": "SingleSelect",
        "options": ["Critical", "High", "Medium", "Low"]
      },
      "Target Date": {
        "type": "Date"
      },
      "Owner": {
        "type": "Assignee"
      }
    },
    "views": [
      {
        "name": "Roadmap",
        "type": "roadmap",
        "groupBy": "Quarter",
        "sortBy": "Target Date"
      },
      {
        "name": "By Priority",
        "type": "table",
        "groupBy": "Priority",
        "sortBy": "Target Date"
      }
    ],
    "automation": {
      "autoAdd": "label:roadmap",
      "autoArchive": "Status:Completed AND closed:>90days"
    }
  },
  "bug-triage": {
    "name": "Bug Triage Board",
    "description": "Bug tracking and triage workflow",
    "columns": ["New", "Confirmed", "In Progress", "Fixed", "Verified"],
    "fields": {
      "Status": {
        "type": "SingleSelect",
        "options": ["New", "Confirmed", "In Progress", "Fixed", "Verified"]
      },
      "Severity": {
        "type": "SingleSelect",
        "options": ["Critical", "High", "Medium", "Low"]
      },
      "Priority": {
        "type": "SingleSelect",
        "options": ["P0", "P1", "P2", "P3"]
      },
      "Affected Version": {
        "type": "Text"
      },
      "Assignee": {
        "type": "Assignee"
      }
    },
    "views": [
      {
        "name": "Triage Board",
        "type": "board",
        "groupBy": "Status"
      },
      {
        "name": "By Severity",
        "type": "table",
        "groupBy": "Severity",
        "sortBy": "Priority"
      }
    ],
    "automation": {
      "autoAdd": "label:bug",
      "autoArchive": "Status:Verified AND closed:>30days"
    }
  }
}
