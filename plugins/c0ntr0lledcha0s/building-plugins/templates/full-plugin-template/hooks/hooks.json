{
  "matchers": {
    "all-bash-commands": {
      "tool": "Bash"
    },
    "file-writes": {
      "tool": "Write"
    }
  },
  "hooks": {
    "pre-bash-validation": {
      "type": "PreToolUse",
      "matchers": ["all-bash-commands"],
      "handler": {
        "type": "command",
        "command": "./hooks/scripts/validate-bash.sh"
      }
    },
    "post-file-write": {
      "type": "PostToolUse",
      "matchers": ["file-writes"],
      "handler": {
        "type": "prompt",
        "prompt": "File was written. Please validate the syntax and ensure it follows project conventions."
      }
    }
  }
}
