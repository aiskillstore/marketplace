  "content": {
    "user_title": "Create and edit DOCX documents",
    "value_statement": "You need to create or revise DOCX files while preserving structure, comments, and tracked changes. This skill unpacks OOXML, applies edits, and repacks documents with validation support.",
    "seo_keywords": [
      "Claude",
      "Codex",
      "Claude Code",
      "docx editing",
      "OOXML",
      "tracked changes",
      "document comments",
      "Word automation",
      "DOCX validation"
    ],
    "actual_capabilities": [
      "Unpack .docx, .pptx, and .xlsx files into directories and pretty print XML",
      "Pack an unpacked directory into an Office file with optional soffice validation",
      "Find and edit XML nodes by tag, attributes, line number, or text",
      "Add comments and tracked changes with automatic metadata for Word documents",
      "Validate DOCX XML against schemas and tracked change rules"
    ],
    "limitations": [
      "Requires local tools such as pandoc or LibreOffice for some workflows",
      "Validation may be skipped if soffice is not available",
      "Supports OOXML formats only, not PDF or legacy .doc",
      "Direct XML edits require careful schema compliance"
    ],
    "use_cases": [
      {
        "target_user": "Legal reviewer",
        "title": "Redline contracts",
        "description": "Apply tracked changes and comments in contracts while preserving original wording."
      },
      {
        "target_user": "Technical writer",
        "title": "Update manuals",
        "description": "Edit DOCX content and keep Word formatting stable during updates."
      },
      {
        "target_user": "Automation engineer",
        "title": "Batch document updates",
        "description": "Script repeatable edits across many DOCX files with validation."
      }
    ],
    "prompt_templates": [
      {
        "title": "Extract readable text",
        "scenario": "You need a simple markdown view",
        "prompt": "Convert report.docx to markdown with tracked changes preserved and summarize the key sections."
      },
      {
        "title": "Add a comment",
        "scenario": "You want to comment on a clause",
        "prompt": "Unpack contract.docx, find the paragraph with ‚Äútermination notice‚Äù, and add a comment asking for clarification."
      },
      {
        "title": "Apply tracked change",
        "scenario": "You need a precise edit",
        "prompt": "Replace ‚Äú30 days‚Äù with ‚Äú60 days‚Äù using tracked changes only around the number."
      },
      {
        "title": "Batch updates with validation",
        "scenario": "You need multiple edits at once",
        "prompt": "Make three related text updates in Section 3 and Section 4, then repack and validate the DOCX."
      }
    ],
    "output_examples": [
      {
        "input": "Update the DOCX to change the due date to July 15 and add a comment on the payment clause.",
        "output": [
          "Updated the due date to July 15 with tracked insertion and deletion",
          "Added a comment on the payment clause asking for confirmation",
          "Repacked the document and reported the validation status"
        ]
      }
    ],
    "best_practices": [
      "Unpack documents before editing and repack with validation",
      "Use tracked changes only around modified text",
      "Test edits in small batches and verify results"
    ],
    "anti_patterns": [
      "Replacing entire paragraphs for minor edits",
      "Editing OOXML without checking schema or validation output",
      "Skipping validation after repacking"
    ],
    "faq": [
      {
        "question": "Is this compatible with Word on Windows and Mac?",
        "answer": "Yes. It outputs standard OOXML files that open in Word on Windows and Mac."
      },
      {
        "question": "Are there file size limits?",
        "answer": "Limits depend on local storage and memory, not the skill itself."
      },
      {
        "question": "Can I integrate this into automated pipelines?",
        "answer": "Yes. The scripts support CLI workflows for unpack, edit, validate, and pack."
      },
      {
        "question": "How is my document data handled?",
        "answer": "Files are processed locally unless you choose to upload them."
      },
      {
        "question": "What should I do if validation fails?",
        "answer": "Review XML changes, fix schema issues, then repack and validate again."
      },
      {
        "question": "How does this compare to editing in Word?",
        "answer": "It enables scripted, precise OOXML edits and tracked changes that are hard to do manually."
      }
    ]
