  "content": {
    "user_title": "Create and edit DOCX documents",
    "value_statement": "You need to create or revise DOCX files while preserving structure, comments, and tracked changes. This skill unpacks OOXML, applies edits, and repacks documents with validation support.",
    "seo_keywords": [
      "Claude",
      "Codex",
      "Claude Code",
      "docx editing",
      "OOXML",
      "tracked changes",
      "document comments",
      "Word automation",
      "DOCX validation"
    ],
    "actual_capabilities": [
      "Unpack .docx, .pptx, and .xlsx files into folders and pretty print XML",
      "Pack an unpacked folder into an Office file with optional validation",
      "Find XML nodes by tag, attributes, line number, or text content",
      "Insert, replace, or append XML fragments in OOXML files",
      "Add Word comments and replies with proper metadata and relationships",
      "Create and revert tracked insertions and deletions in document.xml"
    ],
    "limitations": [
      "Requires local tools like pandoc or LibreOffice for some workflows",
      "Validation may be skipped if soffice is not available",
      "Supports OOXML formats only, not PDF or legacy .doc",
      "Direct XML edits must follow OOXML schema rules"
    ],
    "use_cases": [
      {
        "target_user": "Legal reviewer",
        "title": "Track contract edits",
        "description": "Add tracked changes and comments to DOCX contracts while preserving formatting and review metadata."
      },
      {
        "target_user": "Operations analyst",
        "title": "Batch document fixes",
        "description": "Apply consistent text replacements across unpacked DOCX files and repack them safely."
      },
      {
        "target_user": "Technical writer",
        "title": "Comment on drafts",
        "description": "Insert structured feedback comments and replies inside Word documents for review cycles."
      }
    ],
    "prompt_templates": [
      {
        "title": "Read document text",
        "scenario": "You need the document text with tracked changes",
        "prompt": "Convert this DOCX to markdown and include tracked changes. Save the output as current.md and summarize the main sections."
      },
      {
        "title": "Unpack and inspect XML",
        "scenario": "You need to locate a specific paragraph in XML",
        "prompt": "Unpack report.docx to unpacked/, then locate the paragraph containing the phrase \"delivery terms\" in word/document.xml."
      },
      {
        "title": "Add a comment",
        "scenario": "You need to add a comment to a paragraph",
        "prompt": "Using the Document library, add a comment on the paragraph that contains \"Termination\" with the text \"Clarify notice period\"."
      },
      {
        "title": "Apply tracked changes",
        "scenario": "You need precise tracked edits in XML",
        "prompt": "In word/document.xml, change \"30 days\" to \"60 days\" using tracked changes and preserve surrounding runs."
      }
    ],
    "output_examples": [
      {
        "input": "Add a comment on the paragraph that mentions payment terms and save the updated document.",
        "output": [
          "Unpacked the DOCX and located the payment terms paragraph in word/document.xml",
          "Inserted comment markers and added the comment text in comments.xml",
          "Saved the changes and repacked the document as updated.docx"
        ]
      }
    ],
    "best_practices": [
      "Unpack documents and inspect XML before writing edit scripts",
      "Batch related edits and validate after each batch",
      "Preserve RSID and tracked change metadata when inserting content"
    ],
    "anti_patterns": [
      "Editing document.xml without checking how runs are split",
      "Packing documents without validation after complex changes",
      "Replacing entire paragraphs when only small text changes are needed"
    ],
    "faq": [
      {
        "question": "What file types are supported?",
        "answer": "DOCX, PPTX, and XLSX are supported through OOXML unpack and pack workflows."
      },
      {
        "question": "Are there size or complexity limits?",
        "answer": "Limits depend on local tools and memory. Very large files may require smaller edit batches."
      },
      {
        "question": "How does it integrate with my tools?",
        "answer": "It runs on unpacked files and can be scripted alongside your existing shell workflows."
      },
      {
        "question": "Is my data sent Ø®Ø§Ø±Ø¬ the machine?",
        "answer": "No. The scripts operate on local files and do not include network calls."
      },
      {
        "question": "What should I do if validation fails?",
        "answer": "Review the XML changes, fix schema errors, and rerun validation before packing."
      },
      {
        "question": "How does it compare to manual Word edits?",
        "answer": "It enables precise, repeatable changes and preserves tracked changes metadata at scale."
      }
    ]
