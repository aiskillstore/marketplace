  "content": {
    "user_title": "Create and edit DOCX documents",
    "value_statement": "You need to update DOCX files while preserving comments and tracked changes. This skill unpacks OOXML, edits XML, and repacks documents with validation support.",
    "seo_keywords": [
      "Claude",
      "Codex",
      "Claude Code",
      "docx editing",
      "OOXML",
      "tracked changes",
      "Word comments",
      "document automation",
      "DOCX validation"
    ],
    "actual_capabilities": [
      "Unpack DOCX, PPTX, or XLSX files into folders and pretty print XML.",
      "Pack an unpacked folder into DOCX, PPTX, or XLSX with optional validation.",
      "Find XML nodes by line number, attributes, or text content and edit them.",
      "Add Word comments and replies with required metadata files.",
      "Apply tracked insertions and deletions with automatic IDs and timestamps."
    ],
    "limitations": [
      "Requires local tools like pandoc or LibreOffice for some workflows.",
      "Works only with OOXML formats, not PDF or legacy DOC.",
      "Direct XML edits must follow schema rules to avoid validation errors.",
      "Large documents may require batching to keep validation fast."
    ],
    "use_cases": [
      {
        "target_user": "Legal reviewer",
        "title": "Track contract edits",
        "description": "Insert tracked changes and comments in DOCX contracts while preserving review metadata."
      },
      {
        "target_user": "Operations analyst",
        "title": "Batch document fixes",
        "description": "Apply consistent text replacements across unpacked DOCX files and repack them safely."
      },
      {
        "target_user": "Technical writer",
        "title": "Comment on drafts",
        "description": "Add structured feedback comments and replies for document review cycles."
      }
    ],
    "prompt_templates": [
      {
        "title": "Read document text",
        "scenario": "You need the text with tracked changes",
        "prompt": "Convert report.docx to markdown with tracked changes and save it as current.md. Summarize the main sections."
      },
      {
        "title": "Unpack and inspect XML",
        "scenario": "You need to locate a paragraph in XML",
        "prompt": "Unpack report.docx to unpacked/ and locate the paragraph containing \"delivery terms\" in word/document.xml."
      },
      {
        "title": "Add a comment",
        "scenario": "You need to add a review comment",
        "prompt": "Using the Document library, add a comment on the paragraph that contains \"Termination\" with the text \"Clarify notice period\"."
      },
      {
        "title": "Apply tracked changes",
        "scenario": "You need precise tracked edits in XML",
        "prompt": "In word/document.xml, change \"30 days\" to \"60 days\" using tracked changes and preserve surrounding runs."
      }
    ],
    "output_examples": [
      {
        "input": "Add a comment on the paragraph that mentions payment terms and save the updated document.",
        "output": [
          "Unpacked the DOCX and located the payment terms paragraph in word/document.xml",
          "Inserted comment markers and added the comment text in comments.xml",
          "Saved changes, validated the document, and repacked it as updated.docx"
        ]
      }
    ],
    "best_practices": [
      "Unpack documents and inspect XML before writing edit scripts.",
      "Batch related edits and validate after each batch.",
      "Preserve RSID and tracked change metadata when inserting content."
    ],
    "anti_patterns": [
      "Editing document.xml without checking how runs are split.",
      "Packing documents without validation after complex changes.",
      "Replacing entire paragraphs when only small text changes are needed."
    ],
    "faq": [
      {
        "question": "What file types are supported?",
        "answer": "DOCX, PPTX, and XLSX are supported through the OOXML unpack and pack workflows."
      },
      {
        "question": "Are there size or complexity limits?",
        "answer": "Limits depend on local tools and memory. Very large files may need smaller edit batches."
      },
      {
        "question": "How does it integrate with my tools?",
        "answer": "It works on local files and can be scripted with your existing shell or Python workflows."
      },
      {
        "question": "Is my data safe?",
        "answer": "The scripts operate on local files and do not include network calls."
      },
      {
        "question": "What should I do if validation fails?",
        "answer": "Review the XML changes, fix schema errors, and rerun validation before packing."
      },
      {
        "question": "How does this compare to manual Word edits?",
        "answer": "It enables repeatable edits and preserves tracked change metadata at scale."
      }
    ]
  },
