  "content": {
    "user_title": "Create and edit PowerPoint decks",
    "value_statement": "Building and updating PowerPoint files by hand is slow and error prone. This skill automates PPTX creation, editing, and validation with HTML and OOXML tools.",
    "seo_keywords": [
      "pptx automation",
      "PowerPoint editing",
      "html2pptx",
      "PptxGenJS",
      "OOXML",
      "slide thumbnails",
      "Claude",
      "Codex",
      "Claude Code"
    ],
    "actual_capabilities": [
      "Convert HTML slides into PPTX slides with accurate positioning using `scripts/html2pptx.js`",
      "Extract structured text inventory with formatting and positions into JSON using `scripts/inventory.py`",
      "Apply text and formatting replacements from inventory data using `scripts/replace.py`",
      "Reorder and duplicate slides by index using `scripts/rearrange.py`",
      "Generate thumbnail grids and outline placeholders using `scripts/thumbnail.py`",
      "Unpack, validate, and repack PPTX OOXML using `ooxml/scripts/unpack.py`, `validate.py`, and `pack.py`"
    ],
    "limitations": [
      "HTML conversion only supports specific tags and requires web safe fonts",
      "CSS gradients and icons must be rasterized before conversion",
      "Validation relies on LibreOffice `soffice`, which may be unavailable",
      "Editing workflows require PPTX files and OOXML structure knowledge"
    ],
    "use_cases": [
      {
        "target_user": "Product manager",
        "title": "Build release decks fast",
        "description": "Generate a clean PPTX from a structured outline and adjust layout using HTML slide templates."
      },
      {
        "target_user": "Sales operations",
        "title": "Update template content",
        "description": "Extract inventory, replace text across slides, and keep formatting consistent."
      },
      {
        "target_user": "Design analyst",
        "title": "Review layout quality",
        "description": "Create thumbnail grids and flag text overflow or overlap in slides."
      }
    ],
    "prompt_templates": [
      {
        "title": "Simple deck from outline",
        "scenario": "Beginner creating a short PPTX",
        "prompt": "Create a 5 slide PPTX from this outline. Use 16:9 layout and web safe fonts. Provide HTML slides and a script to generate the deck."
      },
      {
        "title": "Replace text in template",
        "scenario": "Update an existing deck",
        "prompt": "Extract text inventory from template.pptx and replace titles and bullets with this new content. Keep fonts and alignment."
      },
      {
        "title": "Reorder slides by index",
        "scenario": "Reuse template slides",
        "prompt": "Create output.pptx using slides 0,3,3,5 from template.pptx. Keep all media references intact."
      },
      {
        "title": "Advanced layout validation",
        "scenario": "Audit a draft deck",
        "prompt": "Generate thumbnail grids with placeholder outlines and identify slides with text overflow or overlap issues."
      }
    ],
    "output_examples": [
      {
        "input": "Create a 6 slide sales update deck from this outline and generate thumbnails for review.",
        "output": [
          "Slide 1 title and agenda generated with consistent fonts and spacing",
          "Slides 2 to 5 built from HTML with charts placed in placeholders",
          "Slide 6 summary and next steps with clear hierarchy",
          "Thumbnail grid produced for visual review and layout checks"
        ]
      }
    ],
    "best_practices": [
      "Match HTML body dimensions to the PPTX layout setting",
      "Use inventory extraction before applying text replacements",
      "Validate after each OOXML edit and before packing"
    ],
    "anti_patterns": [
      "Using unsupported HTML tags or manual bullet characters",
      "Skipping validation after direct XML edits",
      "Applying gradients directly in CSS without rasterizing"
    ],
    "faq": [
      {
        "question": "What PPTX formats are supported?",
        "answer": "The tools work with standard .pptx files and related OOXML files."
      },
      {
        "question": "What are the HTML conversion limits?",
        "answer": "Only listed tags and web safe fonts are supported, and text must be inside valid text tags."
      },
      {
        "question": "Can I integrate this with existing templates?",
        "answer": "Yes, you can rearrange template slides and replace text using the inventory workflow."
      },
      {
        "question": "Is my data sent anywhere?",
        "answer": "All processing occurs locally in the provided scripts and files."
      },
      {
        "question": "How do I troubleshoot validation failures?",
        "answer": "Run the validator on the unpacked directory and fix the reported XML issues."
      },
      {
        "question": "How does this compare to manual editing?",
        "answer": "It automates creation and updates while preserving structure, but still needs careful layout review."
      }
    ]
  },
