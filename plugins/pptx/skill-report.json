  "content": {
    "user_title": "Create and edit PPTX decks with automation",
    "value_statement": "Building and updating PowerPoint decks by hand is slow and error prone. This skill automates slide creation, editing, validation, and visual checks using HTML and OOXML workflows.",
    "seo_keywords": [
      "pptx automation",
      "PowerPoint editing",
      "Claude",
      "Codex",
      "Claude Code",
      "OOXML",
      "html2pptx",
      "PptxGenJS",
      "slide inventory"
    ],
    "actual_capabilities": [
      "Convert HTML slide files into PPTX slides with positioned text, shapes, images, and placeholders.",
      "Extract a structured text inventory from PPTX files with formatting and layout metadata.",
      "Apply JSON driven text replacements while preserving formatting and checking overflow issues.",
      "Rearrange, duplicate, and reorder slides by index into a new deck.",
      "Generate thumbnail grids of slides and outline text placeholders.",
      "Unpack, validate, and repack OOXML presentation files."
    ],
    "limitations": [
      "HTML conversion requires exact body dimensions that match the PowerPoint layout.",
      "Only web safe fonts are supported; custom fonts may not render correctly.",
      "CSS gradients and icons must be rasterized to PNG before conversion.",
      "Thumbnail generation depends on external tools such as LibreOffice and pdftoppm."
    ],
    "use_cases": [
      {
        "target_user": "Product manager",
        "title": "Update quarterly deck",
        "description": "Replace slide text from a JSON inventory and validate overflow before sending the deck."
      },
      {
        "target_user": "Consultant",
        "title": "Reuse template slides",
        "description": "Rearrange and duplicate template slides to match a new story arc."
      },
      {
        "target_user": "Designer",
        "title": "Audit slide layout",
        "description": "Generate thumbnail grids with placeholder outlines to review layout issues quickly."
      }
    ],
    "prompt_templates": [
      {
        "title": "Create a simple deck",
        "scenario": "New presentation from text",
        "prompt": "Create a 6 slide PPTX on renewable energy using the HTML workflow. Provide the HTML for each slide and a script to generate the deck."
      },
      {
        "title": "Extract slide inventory",
        "scenario": "Review existing deck",
        "prompt": "Extract a text inventory from my deck and save it as inventory.json. Include formatting details and flag overflow issues."
      },
      {
        "title": "Replace slide text",
        "scenario": "Bulk update content",
        "prompt": "Apply replacements from replacements.json to input.pptx and output updated.pptx. Fail if any overflow becomes worse."
      },
      {
        "title": "Reorder template slides",
        "scenario": "Build from template",
        "prompt": "Create a new deck by reordering slides 0,3,3,5,7 from template.pptx and save to output.pptx."
      }
    ],
    "output_examples": [
      {
        "input": "Generate a 5 slide product pitch deck using the HTML to PPTX workflow",
        "output": [
          "Five slide deck generated with title, problem, solution, market, and traction slides",
          "Slides use consistent fonts, spacing, and color palette",
          "Placeholders added for charts with clear positions"
        ]
      }
    ],
    "best_practices": [
      "Match HTML body size to the target PPTX layout before conversion.",
      "Use inventory output as the source of truth for replacements.",
      "Run thumbnail grid checks after edits to catch layout issues."
    ],
    "anti_patterns": [
      "Using custom fonts that are not on the target system.",
      "Placing text directly in div or span elements without text tags.",
      "Skipping validation after OOXML edits or replacements."
    ],
    "faq": [
      {
        "question": "Is it compatible with existing PPTX files?",
        "answer": "Yes, it can read and edit existing PPTX files using inventory and OOXML workflows."
      },
      {
        "question": "What are the size or slide limits?",
        "answer": "Limits depend on system resources; large decks may take longer during conversion and validation."
      },
      {
        "question": "Can it integrate with templates?",
        "answer": "Yes, you can reorder template slides and replace text using inventory JSON."
      },
      {
        "question": "Is my data sent to external services?",
        "answer": "No, the workflows operate on local files and local tools."
      },
      {
        "question": "What if HTML conversion fails?",
        "answer": "Check body dimensions, text tag usage, and rasterize gradients and icons to PNG."
      },
      {
        "question": "How does this compare to manual editing?",
        "answer": "It automates bulk edits and validation, reducing manual slide work and layout errors."
      }
    ]
  },
