  "content": {
    "user_title": "Create and edit PowerPoint files",
    "value_statement": "You need programmatic control over PowerPoint content and layout. This skill converts HTML to PPTX, edits OOXML, and audits slides with thumbnails.",
    "seo_keywords": [
      "PowerPoint automation",
      "pptx editing",
      "OOXML tools",
      "HTML to PPTX",
      "slide inventory",
      "Claude",
      "Codex",
      "Claude Code",
      "presentation workflows"
    ],
    "actual_capabilities": [
      "Convert HTML slides into PPTX with positioned text, shapes, and images.",
      "Extract structured text inventory with formatting and positions from PPTX.",
      "Rearrange, duplicate, and delete slides by index in a template deck.",
      "Replace slide text from JSON while preserving paragraph formatting.",
      "Generate thumbnail grids from PPTX using PDF and image conversion.",
      "Pack and validate OOXML after edits."
    ],
    "limitations": [
      "Requires local tools like LibreOffice, Poppler, and Playwright.",
      "Operates on PPTX files only, not PDF or Google Slides.",
      "Does not generate new images or diagrams by itself.",
      "Needs valid HTML dimensions that match the PPTX layout."
    ],
    "use_cases": [
      {
        "target_user": "Researcher",
        "title": "Build lab update slides",
        "description": "Convert HTML-based slide drafts into a polished PPTX for weekly research meetings."
      },
      {
        "target_user": "Consultant",
        "title": "Reorder template decks",
        "description": "Duplicate and reorder template slides to match a client narrative without manual editing."
      },
      {
        "target_user": "Technical writer",
        "title": "Audit slide text content",
        "description": "Extract all slide text with formatting to review terminology and consistency."
      }
    ],
    "prompt_templates": [
      {
        "title": "Convert HTML slides",
        "scenario": "Beginner conversion flow",
        "prompt": "Convert slides in ./slides/*.html into output.pptx using html2pptx and report any layout validation errors."
      },
      {
        "title": "Create thumbnails",
        "scenario": "Visual review for layout",
        "prompt": "Generate a thumbnail grid for deck.pptx with 4 columns and outline placeholders."
      },
      {
        "title": "Rearrange slides",
        "scenario": "Template-based assembly",
        "prompt": "Rearrange template.pptx into working.pptx using slide order 0,2,2,5,7."
      },
      {
        "title": "Replace text via JSON",
        "scenario": "Advanced content swap",
        "prompt": "Extract inventory from working.pptx, then apply replacement-text.json to produce output.pptx."
      }
    ],
    "output_examples": [
      {
        "input": "Generate thumbnails for sales.pptx with 4 columns and outline placeholders.",
        "output": [
          "Created thumbnails-1.jpg and thumbnails-2.jpg",
          "Outlined all text placeholders in red",
          "Used 4 columns and 20 slides per grid"
        ]
      }
    ],
    "best_practices": [
      "Validate HTML dimensions against the PPTX layout before conversion.",
      "Run thumbnail generation to visually confirm text fit and alignment.",
      "Validate OOXML after edits to avoid corrupt PPTX files."
    ],
    "anti_patterns": [
      "Using CSS gradients without rasterizing them to PNG.",
      "Editing OOXML and repacking without validation.",
      "Referencing shapes not present in the inventory JSON."
    ],
    "faq": [
      {
        "question": "Which platforms are supported?",
        "answer": "Works with PPTX files on any system that can run the required Python and Node tools."
      },
      {
        "question": "What are the main limits?",
        "answer": "No direct PDF or Google Slides support and no built in image generation."
      },
      {
        "question": "Can I integrate with existing templates?",
        "answer": "Yes, you can duplicate and reorder template slides by index."
      },
      {
        "question": "Is my data sent anywhere?",
        "answer": "No network calls are used in the scripts, and files stay local."
      },
      {
        "question": "What if conversion fails?",
        "answer": "Check that soffice and pdftoppm are installed and that the PPTX path is valid."
      },
      {
        "question": "How does it compare to manual editing?",
        "answer": "It offers repeatable, scriptable changes for large decks and templates."
      }
    ]
  },
