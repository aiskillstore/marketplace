  "content": {
    "user_title": "Query Open Targets Platform for therapeutic targets",
    "value_statement": "Find therapeutic targets and drug candidates using Open Targets Platform data. Access genetic evidence, tractability assessments, safety data, and known drugs for target-disease associations.",
    "seo_keywords": [
      "Open Targets Platform",
      "therapeutic target discovery",
      "drug target database",
      "genetics omics evidence",
      "tractability assessment",
      "Claude",
      "Codex",
      "Claude Code",
      "bioinformatics",
      "target-disease associations"
    ],
    "actual_capabilities": [
      "Search targets, diseases, and drugs by name or identifier",
      "Retrieve target annotations including tractability and safety data",
      "Get disease information with associated targets and drugs",
      "Fetch evidence supporting target-disease associations",
      "Query known drugs for diseases with clinical trial phases",
      "Access drug mechanisms of action and indications"
    ],
    "limitations": [
      "API is designed for exploratory queries, not bulk data retrieval",
      "Association scores rank relative evidence, not predict clinical success",
      "Under-studied diseases may have lower scores despite valid evidence",
      "No authentication required but proper citation is required for data use"
    ],
    "use_cases": [
      {
        "target_user": "Drug discovery researchers",
        "title": "Identify novel targets",
        "description": "Find potential therapeutic targets for a disease by querying genetic evidence and tractability data."
      },
      {
        "target_user": "Bioinformaticians",
        "title": "Cross-reference evidence",
        "description": "Gather supporting evidence for target-disease links from multiple data sources and evidence types."
      },
      {
        "target_user": "Pharmacologists",
        "title": "Find drug repurposing",
        "description": "Identify existing drugs for a disease that could be repurposed based on target mechanisms."
      }
    ],
    "prompt_templates": [
      {
        "title": "Find gene targets",
        "scenario": "Search for disease targets",
        "prompt": "Find genes associated with [DISEASE] that have good genetic evidence and tractability data."
      },
      {
        "title": "Get evidence details",
        "scenario": "Get supporting evidence",
        "prompt": "What evidence supports the association between [GENE] and [DISEASE]?"
      },
      {
        "title": "Check drug options",
        "scenario": "Find known drugs",
        "prompt": "List known drugs for [DISEASE] and their clinical trial phases."
      },
      {
        "title": "Compare targets",
        "scenario": "Prioritize targets",
        "prompt": "Compare tractability, safety, and genetic constraint for [GENE1] and [GENE2]."
      }
    ],
    "output_examples": [
      {
        "input": "Find targets for Alzheimer's disease with genetic evidence",
        "output": [
          "BRCA1 - associated with score 0.85, evidence from GWAS and genetic association",
          "PICALM - tractability: predicted druggable, safety: no liabilities reported",
          "CLU - known drugs: none in clinical trials, expression data available"
        ]
      }
    ],
    "best_practices": [
      "Start with genetic evidence as the strongest indicator of disease relevance",
      "Consider multiple evidence types for confidence in target selection",
      "Check tractability assessments before prioritizing targets",
      "Review safety liabilities for potential toxicity concerns"
    ],
    "anti_patterns": [
      "Using association scores as absolute confidence measures",
      "Relying on single evidence source for critical decisions",
      "Ignoring under-studied diseases that may score lower",
      "Missing proper citation of Open Targets Platform in publications"
    ],
    "faq": [
      {
        "question": "What is Open Targets Platform?",
        "answer": "A public database integrating genetics, omics, and literature data for therapeutic target identification."
      },
      {
        "question": "Do I need API access?",
        "answer": "No authentication required. The GraphQL API is freely accessible for research and commercial use."
      },
      {
        "question": "What entities can I query?",
        "answer": "Targets (genes), diseases (EFO IDs), and drugs (ChEMBL IDs) with comprehensive annotations."
      },
      {
        "question": "How to filter by evidence type?",
        "answer": "Use the data_types parameter in get_target_disease_evidence to filter evidence categories."
      },
      {
        "question": "What are association scores?",
        "answer": "Relative rankings of evidence strength from 0-1, not absolute confidence measures."
      },
      {
        "question": "How often is data updated?",
        "answer": "Open Targets Platform is updated quarterly with new data releases."
      }
    ]
