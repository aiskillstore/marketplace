  "content": {
    "user_title": "Design REST and GraphQL APIs with confidence",
    "value_statement": "API design decisions often become inconsistent and hard to maintain. This skill provides clear patterns, templates, and checklists to guide your choices.",
    "seo_keywords": [
      "API design",
      "REST best practices",
      "GraphQL schema design",
      "FastAPI template",
      "OpenAPI guidance",
      "Claude",
      "Codex",
      "Claude Code",
      "API checklist",
      "developer tools"
    ],
    "actual_capabilities": [
      "Explains REST resource naming, methods, and status code patterns",
      "Provides GraphQL schema and resolver design examples",
      "Includes pagination, filtering, and error handling patterns",
      "Supplies a FastAPI REST API template with middleware",
      "Offers a pre-implementation API design checklist"
    ],
    "limitations": [
      "Does not generate a full API project or database layer",
      "Does not run automated validation or linting",
      "Does not integrate with existing codebases automatically",
      "Does not cover deployment or hosting setup"
    ],
    "use_cases": [
      {
        "target_user": "Backend engineer",
        "title": "Define new API standards",
        "description": "Create consistent REST and GraphQL rules for a team before implementation."
      },
      {
        "target_user": "Tech lead",
        "title": "Review API specifications",
        "description": "Audit specs for naming, versioning, and error handling issues."
      },
      {
        "target_user": "Product developer",
        "title": "Improve API usability",
        "description": "Refine endpoints and schema to reduce client confusion and rework."
      }
    ],
    "prompt_templates": [
      {
        "title": "REST basics review",
        "scenario": "You have a draft REST API spec",
        "prompt": "Review this REST API outline and list naming, method, and status code fixes. Provide a short corrected example."
      },
      {
        "title": "GraphQL schema check",
        "scenario": "You wrote a GraphQL schema draft",
        "prompt": "Evaluate this GraphQL schema for pagination, input types, and error patterns. Suggest improvements with brief examples."
      },
      {
        "title": "Versioning strategy",
        "scenario": "You expect breaking changes soon",
        "prompt": "Recommend a versioning approach for this API and explain the tradeoffs. Provide a migration checklist."
      },
      {
        "title": "Design checklist run",
        "scenario": "You want a structured review",
        "prompt": "Apply an API design checklist to this spec and return pass or fail with fixes for each failed item."
      }
    ],
    "output_examples": [
      {
        "input": "Review my user and order endpoints for REST best practices.",
        "output": [
          "Use plural nouns: /api/users and /api/orders",
          "Replace action paths like /api/createUser with POST /api/users",
          "Add pagination to list endpoints with page and page_size",
          "Return 201 Created on successful POST and 204 on DELETE"
        ]
      },
      {
        "input": "How should I structure a GraphQL schema for a blog with users, posts, and comments?",
        "output": [
          "Define User, Post, Comment types with proper relationships",
          "Use Relay-style cursor pagination for collections",
          "Create input types for mutations with error payloads",
          "Add DataLoaders to prevent N+1 queries on relationships"
        ]
