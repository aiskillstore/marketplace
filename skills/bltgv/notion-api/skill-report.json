  "content": {
    "user_title": "Access Notion pages, databases, and content via API",
    "value_statement": "Notion workspaces contain valuable documentation, tasks, and project data. This skill provides a TypeScript interface to search, read, and manage Notion content through the official API. Enable AI assistants to retrieve information from your knowledge base and create structured updates.",
    "seo_keywords": [
      "notion api",
      "notion integration",
      "claude",
      "codex",
      "claude code",
      "search notion",
      "notion database query",
      "notion pages",
      "workspace integration",
      "documentation"
    ],
    "actual_capabilities": [
      "Search pages and databases across your Notion workspace",
      "Get, create, and update Notion pages with properties and icons",
      "Query databases with filters, sorting, and pagination",
      "Read page content as structured blocks with nested children"
    ],
    "limitations": [
      "Requires NOTION_TOKEN environment variable with Notion integration setup",
      "Pages and databases must be shared with the integration to be accessible",
      "Rate limited to approximately 3 requests per second by Notion API",
      "Cannot create or modify block content within pages directly"
    ],
    "use_cases": [
      {
        "target_user": "Knowledge workers",
        "title": "Search team documentation",
        "description": "Find meeting notes, project specs, and reference docs stored in Notion"
      },
      {
        "target_user": "Project managers",
        "title": "Query task databases",
        "description": "Retrieve and filter task lists with status, priority, and due date criteria"
      },
      {
        "target_user": "Developers",
        "title": "Automate Notion updates",
        "description": "Create pages and entries from CI/CD pipelines or automated workflows"
      }
    ],
    "prompt_templates": [
      {
        "title": "Basic search",
        "scenario": "Find information in Notion",
        "prompt": "Search Notion for pages matching \"{query}\""
      },
      {
        "title": "Database query",
        "scenario": "Filter database entries",
        "prompt": "Query the Notion database {id} for entries where Status equals \"Done\""
      },
      {
        "title": "Page creation",
        "scenario": "Create new page",
        "prompt": "Create a new Notion page under {parent_id} with title \"{title}\""
      },
      {
        "title": "Content retrieval",
        "scenario": "Read page blocks",
        "prompt": "List all blocks from Notion page {id} recursively"
      }
    ],
    "output_examples": [
      {
        "input": "Search Notion for meeting notes",
        "output": [
          "Found 3 pages matching \"meeting notes\":",
          "‚Ä¢ Weekly Team Sync (updated yesterday)",
          "‚Ä¢ Project Kickoff Agenda (updated last week)",
          "‚Ä¢ Q1 Planning Notes (updated 2 weeks ago)"
        ]
      },
      {
        "input": "Query tasks database for high priority items",
