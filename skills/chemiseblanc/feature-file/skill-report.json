  "content": {
    "user_title": "Track Software Features with YAML Requirements Management",
    "value_statement": "Software projects need structured requirement tracking beyond simple todo lists. This skill provides waterfall-style feature management with requirements, test cases, and progress tracking in a persistent YAML format stored in your repository.",
    "seo_keywords": [
      "feature tracking",
      "requirements management",
      "test case tracking",
      "Claude Code",
      "YAML project management",
      "software development",
      "project planning",
      "feature status",
      "Claude",
      "Codex"
    ],
    "actual_capabilities": [
      "Create and manage features.yml files with structured requirements",
      "Track feature phases from Requirements to Complete",
      "Link test cases to requirements with passing/failing status",
      "Generate reports on work remaining, issues, and feature status",
      "Validate phase transitions and requirement completeness",
      "Version features with changelog tracking"
    ],
    "limitations": [
      "Requires features.yml file to exist for proactive usage",
      "Waterfall methodology may not suit all project types",
      "No integration with external project management tools",
      "Manual status updates required during development"
    ],
    "use_cases": [
      {
        "target_user": "Software developers",
        "title": "Track implementation progress",
        "description": "Manage feature requirements and mark them complete as you implement functionality, with linked test cases for verification."
      },
      {
        "target_user": "Project managers",
        "title": "Monitor feature development",
        "description": "Get overview of all features, their phases, progress, and failing tests to track project status."
      },
      {
        "target_user": "QA engineers",
        "title": "Manage test coverage",
        "description": "Link test cases to requirements and track which tests are passing or failing for each feature."
      }
    ],
    "prompt_templates": [
      {
        "title": "Create new feature",
        "scenario": "Starting a new feature implementation",
        "prompt": "Create a features.yml file for implementing user authentication with requirements for login, logout, and password reset functionality."
      },
      {
        "title": "Update status",
        "scenario": "After completing a requirement",
        "prompt": "Update the user authentication feature in features.yml to mark the login requirement as Complete and add a test case for it."
      },
      {
        "title": "View work remaining",
        "scenario": "Planning next development tasks",
        "prompt": "Show me all incomplete requirements across all features in features.yml, filtered to Implementation phase."
      },
      {
        "title": "Check feature status",
        "scenario": "Weekly project review",
        "prompt": "Generate a markdown report of all features showing their phases, progress, test status, and any validation errors."
      }
    ],
    "output_examples": [
      {
        "input": "Show the status of all features",
        "output": [
          "Feature Status Overview:",
          "",
          "User Authentication System (Implementation) - 3/5 requirements complete",
          "Tests: 8/10 passing (unit: 6/7, integration: 2/3)",
          "",
          "API Rate Limiting (Design) - 0/2 requirements complete",
          "Tests: 0/0 passing",
          "",
          "Validation Errors:",
          "  User Authentication System:",
          "    - req-auth-oauth is In-Progress (must be Complete for Complete phase)"
        ]
      },
      {
        "input": "What work is remaining?",
        "output": [
          "Work Remaining:",
          "",
          "User Authentication System (Implementation)",
          "  - req-auth-oauth [In-Progress]: The system SHALL support OAuth2 authentication",
          "  - req-auth-logout [Needs-Work]: When the user clicks logout, the system SHALL invalidate",
