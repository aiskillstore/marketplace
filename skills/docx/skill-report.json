  "content": {
    "user_title": "Create and Edit Word Documents",
    "value_statement": "You need to create, edit, or analyze Word documents while preserving tracked changes, comments, and formatting. This skill provides OOXML manipulation tools for professional document workflows. It handles document creation, editing, commenting, and tracked changes with automatic validation.",
    "seo_keywords": [
      "Claude",
      "Codex",
      "Claude Code",
      "docx editing",
      "OOXML",
      "tracked changes",
      "Word comments",
      "document automation",
      "DOCX validation",
      "Word documents"
    ],
    "actual_capabilities": [
      "Create new Word documents using docx-js JavaScript library with formatting support",
      "Unpack DOCX files into XML structure for editing and analysis",
      "Edit existing documents using Python Document library with tracked changes",
      "Add comments and replies to document content with proper metadata",
      "Validate documents against OOXML schema and redlining rules"
    ],
    "limitations": [
      "Requires external tools like pandoc and LibreOffice for text extraction and PDF conversion",
      "Only works with OOXML formats (DOCX, PPTX, XLSX), not PDF or legacy DOC format",
      "Direct XML edits must follow OOXML schema rules or validation will fail",
      "Large documents may require batching changes for efficient processing"
    ],
    "use_cases": [
      {
        "target_user": "Legal professional",
        "title": "Review contracts",
        "description": "Add tracked changes and comments to legal documents while preserving revision history."
      },
      {
        "target_user": "Technical writer",
        "title": "Edit documentation",
        "description": "Create professional Word documents with tables, images, and proper formatting."
      },
      {
        "target_user": "Business analyst",
        "title": "Analyze reports",
        "description": "Extract text and structure from existing documents for review and revision."
      }
    ],
    "prompt_templates": [
      {
        "title": "Read document content",
        "scenario": "Extract text with tracked changes",
        "prompt": "Convert report.docx to markdown with --track-changes=all and save it to current.md"
      },
      {
        "title": "Create new document",
        "scenario": "Generate a formatted report",
        "prompt": "Create a new Word document with title, headings, and table using docx-js library"
      },
      {
        "title": "Apply tracked edits",
        "scenario": "Edit document with revision tracking",
        "prompt": "Unpack document.docx, change \"30 days\" to \"45 days\" using tracked changes, validate, and repack"
      },
      {
        "title": "Add review comments",
        "scenario": "Collaborate on document review",
        "prompt": "Add a comment on the paragraph containing \"payment terms\" with text \"Please clarify\" and save updated document"
      }
    ],
    "output_examples": [
      {
        "input": "Add a comment on the paragraph mentioning payment terms and save the updated document.",
        "output": [
          "Unpacked the DOCX and located the payment terms paragraph in word/document.xml",
          "Inserted comment markers and added the comment text in comments.xml with proper metadata",
          "Validated the document structure and repacked it as updated.docx"
        ]
      }
    ],
    "best_practices": [
      "Always unpack documents and inspect XML structure before writing edit scripts",
      "Group related edits into batches and validate after each batch for easier debugging",
      "Preserve RSID attributes and tracked change metadata when inserting new content"
    ],
    "anti_patterns": [
      "Editing word/document.xml without checking how text is split across run elements",
      "Packing documents without running validation after making complex changes",
      "Replacing entire paragraphs when only small text portions actually need modification"
    ],
    "faq": [
      {
        "question": "What document formats are supported?",
        "answer": "DOCX, PPTX, and XLSX files are supported through OOXML unpack and pack workflows."
      },
      {
        "question": "Are there file size limits?",
        "answer": "Limits depend on local system resources. Very large documents may need smaller edit batches."
      },
      {
        "question": "How does this integrate with my workflow?",
        "answer": "Scripts operate on local files and can be combined with shell commands or Python scripts."
      },
      {
        "question": "Is my data secure?",
        "answer": "All processing happens locally with no network calls. XML parsing uses defusedxml for protection."
      },
      {
        "question": "What if validation fails?",
        "answer": "Review the XML error messages, fix schema violations, and rerun validation before repacking."
      },
      {
        "question": "How is this different from Word?",
        "answer": "This enables programmatic, repeatable edits at scale with full tracked change metadata preservation."
      }
    ]
  },
