  "content": {
    "user_title": "Test WordPress with Disposable Playgrounds",
    "value_statement": "Setting up WordPress locally for testing is time consuming. This skill provides instant disposable WordPress instances in your browser or via CLI. Test plugins, themes, and debug with Xdebug in isolated environments without full stack setup.",
    "seo_keywords": [
      "WordPress Playground",
      "WordPress testing",
      "Claude Code",
      "Claude",
      "Codex",
      "WordPress debugging",
      "Xdebug",
      "Blueprints",
      "WordPress development",
      "plugin testing"
    ],
    "actual_capabilities": [
      "Spin up disposable WordPress instances in browser or locally",
      "Auto-mount and test plugins and themes",
      "Run Blueprint JSON files for scripted setup",
      "Switch between WordPress and PHP versions",
      "Debug with Xdebug in isolated Playground",
      "Build site snapshots for sharing"
    ],
    "limitations": [
      "Requires Node.js 20.18+ for CLI usage",
      "Uses SQLite, not suitable for production databases",
      "Cannot run native PHP extensions",
      "Not a replacement for full WordPress stack when native modules needed"
    ],
    "use_cases": [
      {
        "target_user": "Plugin Developers",
        "title": "Test Plugins Safely",
        "description": "Test your plugin across multiple WordPress and PHP versions without polluting your local environment."
      },
      {
        "target_user": "Theme Designers",
        "title": "Preview Theme Changes",
        "description": "Preview theme changes instantly in a clean WordPress environment before deploying."
      },
      {
        "target_user": "QA Engineers",
        "title": "Reproduce Bug Reports",
        "description": "Create reproducible WordPress environments to investigate bug reports from users."
      }
    ],
    "prompt_templates": [
      {
        "title": "Quick WP Test",
        "scenario": "Start a test WordPress instance",
        "prompt": "Start a WordPress Playground instance to test a plugin. I am working in /path/to/my-plugin. Use the latest WordPress and PHP 8.3."
      },
      {
        "title": "Version Compatibility",
        "scenario": "Test across WP versions",
        "prompt": "Test my plugin for compatibility with WordPress 6.8, 6.7, and 6.6. Use PHP 8.2. Check if the plugin activates without errors on each version."
      },
      {
        "title": "Blueprint Workflow",
        "scenario": "Run a custom Blueprint",
        "prompt": "Run a Blueprint to set up WordPress with my custom plugin and theme. The blueprint is at /path/to/blueprint.json. Enable Xdebug for debugging."
      },
      {
        "title": "Debug Session",
        "scenario": "Debug plugin with Xdebug",
        "prompt": "Start a WordPress Playground debugging session with Xdebug enabled. My plugin code is at /path/to/plugin. I want to step through the activation code."
      }
    ],
    "output_examples": [
      {
        "input": "Start a WordPress Playground to test my plugin at /projects/my-plugin with PHP 8.2",
        "output": [
          "Created disposable WordPress instance at http://localhost:9400",
          "Auto-detected and mounted plugin from /projects/my-plugin",
          "WordPress 6.9.0 with PHP 8.2 is running",
          "Plugin activated successfully",
          "Xdebug is available on port 9003"
        ]
      },
      {
        "input": "Run a blueprint to set up WordPress with WooCommerce",
        "output": [
          "Downloading WordPress 6.9.0",
          "Installing WooCommerce from ZIP",
          "Running database setup steps",
          "Site ready at http://localhost:9400",
          "Snapshot saved to site.zip"
        ]
      }
    ],
    "best_practices": [
      "Always verify mounted code is active by checking plugin list or theme appearance",
      "Use Blueprints for reproducible test environments and CI validation",
      "Never point Playground at production data since it uses ephemeral in-memory storage"
    ],
    "anti_patterns": [
      "Do not use Playground for production database migrations",
      "Avoid testing with real user data in disposable instances",
      "Do not skip version compatibility testing when targeting multiple WP releases"
    ],
    "faq": [
      {
        "question": "What versions of WordPress and PHP are supported?",
        "answer": "WordPress 6.9+ and PHP 7.2.24+ are supported. PHP 8.3 is the default since July 2025."
      },
      {
        "question": "Can I test native PHP extensions?",
        "answer": "No. Playground runs PHP in WebAssembly and cannot load native PHP extensions. Use Docker or full stack for that."
      },
      {
        "question": "How do I integrate with my CI pipeline?",
        "answer": "Use run-blueprint command with CI-friendly outputs. Blueprints can validate plugins activate without errors."
      },
      {
        "question": "Is my data safe in Playground instances?",
        "answer": "Playground uses ephemeral in-memory SQLite. Data is lost when the instance stops. Never use with production data."
      },
      {
        "question": "Why are my breakpoints not hitting in Xdebug?",
        "answer": "Check IDE path mappings include the VFS path used by Playground. Confirm IDE listens on the port shown by CLI."
      },
      {
        "question": "How is this different from wp-env or Docker?",
        "answer": "Playground runs entirely in browser or via lightweight CLI without Docker. It is faster to start but has limitations on native extensions."
      }
    ]
