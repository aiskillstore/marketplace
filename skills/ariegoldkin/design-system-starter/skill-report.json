  "content": {
    "user_title": "Build Consistent Design Systems with Tokens and Components",
    "value_statement": "Creating consistent, accessible user interfaces across applications is challenging without standardized design foundations. This skill provides design token structures, component patterns, and accessibility guidelines to build scalable design systems that ensure visual consistency and WCAG compliance.",
    "seo_keywords": [
      "design system",
      "UI components",
      "design tokens",
      "accessibility",
      "WCAG",
      "React components",
      "consistent UI",
      "frontend design",
      "Claude",
      "Codex",
      "Claude Code"
    ],
    "actual_capabilities": [
      "Define W3C-compliant design tokens for colors, typography, spacing, and shadows",
      "Create accessible React components following atomic design methodology",
      "Implement dark mode theming with CSS variables and semantic tokens",
      "Apply WCAG 2.1 Level AA accessibility standards to all components",
      "Build component documentation templates for Storybook or similar tools"
    ],
    "limitations": [
      "Does not generate actual code files on disk",
      "Does not connect to design tools like Figma or Sketch",
      "Does not provide visual design or color palette recommendations"
    ],
    "use_cases": [
      {
        "target_user": "Frontend Developers",
        "title": "Build Component Libraries",
        "description": "Create reusable component libraries that ensure consistency across team projects."
      },
      {
        "target_user": "Design System Engineers",
        "title": "Establish Token Foundations",
        "description": "Define design token structures and documentation for organization-wide design standards."
      },
      {
        "target_user": "Product Teams",
        "title": "Ensure Accessibility Compliance",
        "description": "Apply WCAG guidelines to make applications accessible to all users."
      }
    ],
    "prompt_templates": [
      {
        "title": "Create Design Tokens",
        "scenario": "Setting up foundational design system",
        "prompt": "Create design tokens for our design system including color primitives (50-950 scale), semantic colors for brand and feedback, typography scale, and spacing scale. Use W3C format."
      },
      {
        "title": "Build Accessible Button",
        "scenario": "Creating a button component",
        "prompt": "Create an accessible Button component in React with primary, secondary, outline, and ghost variants. Include proper ARIA attributes, keyboard navigation, focus states, and loading indicators."
      },
      {
        "title": "Implement Dark Mode",
        "scenario": "Adding theme support",
        "prompt": "Implement dark mode support for our design system using CSS variables. Include a theme toggle component that respects system preferences and persists user choice."
      },
      {
        "title": "Audit Accessibility",
        "scenario": "Reviewing component accessibility",
        "prompt": "Review our Modal component for WCAG 2.1 Level AA compliance. Check focus management, ARIA attributes, keyboard navigation, and color contrast requirements."
      }
    ],
    "output_examples": [
      {
