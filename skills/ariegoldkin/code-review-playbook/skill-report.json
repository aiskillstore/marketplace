      {
        "target_user": "Software developers",
        "title": "Review pull requests",
        "description": "Systematically review code changes using checklists for quality, security, performance, and testing"
      },
      {
        "target_user": "Team leads",
        "title": "Establish review standards",
        "description": "Create consistent code review practices across the team with conventional comments and templates"
      },
      {
        "target_user": "New developers",
        "title": "Learn review practices",
        "description": "Understand how to give and receive constructive feedback through structured guidelines"
      }
    ],
    "prompt_templates": [
      {
        "title": "Quick review request",
        "scenario": "Review a simple PR",
        "prompt": "Review this pull request for code quality, error handling, and test coverage. Use conventional comments format."
      },
      {
        "title": "Security focus review",
        "scenario": "Review PR for security issues",
        "prompt": "Perform a security review of this code. Check for authentication, authorization, injection vulnerabilities, and sensitive data handling."
      },
      {
        "title": "Architecture review",
        "scenario": "Review PR for design patterns",
        "prompt": "Review this PR for architectural soundness, design patterns, separation of concerns, and scalability."
      },
      {
        "title": "Full team review",
        "scenario": "Comprehensive review with templates",
        "prompt": "Provide a complete code review including executive summary, detailed feedback, security review, and approval decision using the review feedback template."
      }
    ],
    "output_examples": [
      {
        "input": "Review this authentication module for security vulnerabilities",
        "output": [
          "Blocking Issue: Missing authentication middleware on /api/admin/users endpoint",
          "Blocking Issue: Password hashing uses deprecated MD5 instead of bcrypt",
          "Suggestion: Add rate limiting for login attempts",
          "Praise: Excellent input validation on registration form",
          "Security checklist: All critical items passed"
        ]
      },
      {
        "input": "Review this Python PR for quality and best practices",
        "output": [
          "Issue: Missing type hints on public functions",
          "Issue: Bare except clause catches all exceptions",
          "Suggestion: Use f-strings instead of string concatenation",
          "Nitpick: Add blank line between imports and code",
          "PEP 8 compliance: 3 style violations found"
        ]
      },
      {
        "input": "Review this React component for performance issues",
        "output": [
          "Issue: Missing dependency array in useEffect",
          "Issue: Re-renders on every parent update",
          "Suggestion: Memoize expensive calculations with useMemo",
          "Praise: Clean component structure and proper prop types",
          "Performance: 3 potential render optimizations identified"
        ]
      }
    ],
    "best_practices": [
      "Provide specific, actionable feedback with concrete code suggestions",
      "Use conventional comments labels (praise, issue, suggestion, question) to indicate comment type",
      "Review code within 24 hours to maintain team velocity",
      "Distinguish blocking issues from nice-to-have suggestions"
    ],
    "anti_patterns": [
      "Approving without reading the code (rubber-stamping)",
      "Blocking on personal preferences rather than objective issues",
      "Submitting large PRs exceeding 400 lines without context",
      "Rewriting code in comments instead of suggesting improvements"
    ],
    "faq": [
      {
        "question": "Which AI tools support this skill?",
        "answer": "This skill works with Claude, Codex, and Claude Code. All three support conventional comments and review templates."
      },
      {
        "question": "What is the maximum PR size for effective review?",
        "answer": "Keep PRs under 400 lines for focused reviews. Large PRs over 800 lines should be split into smaller, logical chunks."
      },
      {
        "question": "How do I integrate templates with GitHub or GitLab?",
        "answer": "Copy the PR template content to .github/pull_request_template.md or .gitlab/merge_request_templates/MR_TEMPLATE.md."
      },
      {
        "question": "Is my code data safe when using this skill?",
        "answer": "Yes. This skill is purely prompt-based documentation. It does not execute code, access files, or transmit data externally."
      },
      {
        "question": "Why are my review comments being ignored?",
        "answer": "Ensure comments are specific and actionable. Use conventional labels. Distinguish blocking issues from suggestions. Follow up promptly."
      },
      {
        "question": "How does this compare to automated code analysis tools?",
        "answer": "This skill guides human reviewers through systematic checks. Automated tools (ESLint, SonarQube) handle formatting and simple checks. Human review catches logic, design, and context issues."
      }
    ]
