  "content": {
    "user_title": "Create and edit PowerPoint presentations",
    "value_statement": "This skill enables Claude to create, modify, and analyze PowerPoint presentations. It supports building presentations from scratch using HTML conversion, editing OOXML content directly, and working with templates for consistent branding.",
    "seo_keywords": [
      "PowerPoint",
      "PPTX",
      "presentation",
      "slides",
      "office documents",
      "Claude",
      "Codex",
      "Claude Code",
      "document creation",
      "slideshow"
    ],
    "actual_capabilities": [
      "Create new PowerPoint presentations from HTML slides with precise positioning",
      "Edit existing presentations by unpacking, modifying OOXML, and repacking",
      "Duplicate and rearrange slides from template presentations",
      "Generate thumbnail grids for visual slide analysis",
      "Extract text inventory and replace content while preserving formatting",
      "Validate OOXML structure to ensure file integrity"
    ],
    "limitations": [
      "Requires external tools: LibreOffice (soffice) and Poppler (pdftoppm) for conversions",
      "Cannot edit charts, animations, or complex transitions directly",
      "Limited to standard PPTX formats compatible with Office Open XML standard",
      "Design modifications require HTML template updates rather than direct design tools"
    ],
    "use_cases": [
      {
        "target_user": "Business professionals",
        "title": "Create branded presentations",
        "description": "Build consistent presentations using company templates with automated slide rearrangement and content replacement."
      },
      {
        "target_user": "Content creators",
        "title": "Convert HTML to slides",
        "description": "Transform HTML slide designs into PowerPoint format with accurate layout and positioning for distribution."
      },
      {
        "target_user": "Technical writers",
        "title": "Analyze and modify presentations",
        "description": "Extract content inventory from existing presentations and programmatically update text while preserving formatting."
      }
    ],
    "prompt_templates": [
      {
        "title": "Create simple slides",
        "scenario": "New presentation from HTML",
        "prompt": "Create a 5-slide PowerPoint presentation about topic X using the html2pptx workflow. First read html2pptx.md for the complete workflow."
      },
      {
        "title": "Edit existing slides",
        "scenario": "Modify presentation content",
        "prompt": "Update the text in presentation.pptx. Unpack it, read the structure, then replace the content according to the outline I provide."
      },
      {
        "title": "Use template",
        "scenario": "Template-based creation",
        "prompt": "Create a new presentation using template.pptx as a design guide. First analyze the template structure and inventory, then create new content."
      },
      {
        "title": "Visual validation",
        "scenario": "Thumbnail review",
        "prompt": "Generate a thumbnail grid of template.pptx to visually analyze the slide layouts before creating content."
      }
    ],
    "output_examples": [
      {
        "input": "Create a 3-slide presentation about quarterly results with a title slide, key metrics, and a summary slide.",
        "output": [
          "Created output.pptx with 3 slides",
          "Slide 1: Title slide with 'Quarterly Results' header",
          "Slide 2: Three-column layout with metrics charts",
          "Slide 3: Bullet-point summary with action items",
          "Thumbnail grid verified layout correctness"
        ]
      },
      {
        "input": "Extract all text from report.pptx and prepare a JSON inventory for content replacement.",
        "output": [
          "Generated text-inventory.json with 24 shapes across 8 slides",
          "Slide 0: Title placeholder (shape-0)",
          "Slide 1: 4 body text shapes with bullet formatting",
          "Full paragraph properties preserved including fonts and colors"
        ]
      }
    ],
    "best_practices": [
      "Always read html2ppt.md or ooxml.md completely before starting a task for the specific workflow",
      "Generate thumbnail grids after creating presentations to visually verify layout correctness",
      "Validate presentations immediately after editing OOXML content before repacking"
    ],
    "anti_patterns": [
      "Do not modify PPTX files without reading the full workflow documentation first",
      "Avoid forcing content into layouts that do not match the placeholder structure",
      "Do not skip validation when repacking edited presentations"
    ],
    "faq": [
      {
        "question": "Can this skill edit charts in PowerPoint?",
        "answer": "Direct chart editing is not supported. Charts must be recreated as placeholders and replaced manually."
      },
      {
        "question": "What external tools are required?",
        "answer": "LibreOffice (soffice) and Poppler (pdftoppm) must be installed for PDF conversion and thumbnail generation."
      },
      {
        "question": "Can I use any PowerPoint template?",
        "answer:": "Most templates work, but complex animations and macros may cause validation issues during repacking."
      },
      {
        "question": "How does the html2pptx workflow work?",
        "answer": "It converts HTML slides to PowerPoint using PptxGenJS, then rasterizes gradients and adds charts/tables as placeholders."
      },
      {
        "question": "What is the OOXML editing workflow?",
        "answer": "Unpack the PPTX, modify XML files directly, validate immediately, then repack into a new PPTX file."
      },
      {
        "question": "Can this skill extract images from presentations?",
        "answer": "The skill focuses on text and structure. Media files can be accessed through the unpacked directory structure."
      }
    ]
  },
