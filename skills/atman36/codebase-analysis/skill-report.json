    "user_title": "Analyze codebase structure and architecture",
    "value_statement": "Understanding an unfamiliar codebase takes significant time and effort. This skill provides systematic analysis of project structure, technology stack, dependencies, and code quality metrics to accelerate onboarding and decision-making.",
    "seo_keywords": [
      "codebase analysis",
      "code review",
      "project structure",
      "dependency analysis",
      "Claude Code",
      "Claude",
      "Codex",
      "architecture audit",
      "code quality metrics",
      "technology stack detection"
    ],
    "actual_capabilities": [
      "Map project directory structure and identify source, test, and config directories",
      "Detect technology stack including frameworks, libraries, and build tools",
      "Analyze architectural patterns and code organization strategies",
      "Identify code quality indicators like TypeScript strictness, linting, and testing coverage",
      "Run dependency security audits using npm audit",
      "Generate comprehensive codebase analysis reports"
    ],
    "limitations": [
      "Does not modify or write to any project files",
      "Analysis is limited to local project files only",
      "Cannot access private repositories or remote codebases",
      "Performance depends on project size and complexity"
    ],
    "use_cases": [
      {
        "target_user": "New developers",
        "title": "Onboard to new projects",
        "description": "Quickly understand project structure, conventions, and key components when joining a new team"
      },
      {
        "target_user": "Tech leads",
        "title": "Assess architecture decisions",
        "description": "Review code organization patterns before planning refactoring or major changes"
      },
      {
        "target_user": "Security auditors",
        "title": "Identify dependency vulnerabilities",
        "description": "Run security audits to find outdated or vulnerable dependencies in the project"
      }
    ],
    "prompt_templates": [
      {
        "title": "Quick overview",
        "scenario": "Start working on a new project",
        "prompt": "Analyze this codebase structure and give me a quick overview of the project"
      },
      {
        "title": "Architecture review",
        "scenario": "Plan refactoring work",
        "prompt": "Analyze the architecture patterns and identify the main components and their relationships"
      },
      {
        "title": "Security check",
        "scenario": "Review dependencies for vulnerabilities",
        "prompt": "Check for outdated or vulnerable dependencies using npm audit and npm outdated"
      },
      {
        "title": "Quality assessment",
        "scenario": "Evaluate code quality before commit",
        "prompt": "Assess the code quality including TypeScript strictness, linting setup, and test coverage"
      }
    ],
    "output_examples": [
      {
        "input": "Analyze this codebase structure and give me a quick overview",
        "output": [
