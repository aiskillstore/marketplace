    "actual_capabilities": [
      "Gathers all git changes including commits, diffs, and uncommitted work",
      "Generates PR descriptions with summary tables and visual diagrams",
      "Creates collapsible file lists organized by category",
      "Produces structured test plans with automated and manual steps",
      "Updates existing PRs or creates new ones via GitHub CLI"
    ],
    "limitations": [
      "Requires GitHub CLI (gh) and git to be installed",
      "Does not modify source code, only PR descriptions",
      "Cannot access private repositories without proper GitHub authentication",
      "Output quality depends on git commit message quality"
    ],
    "use_cases": [
      {
        "target_user": "Software developers",
        "title": "Streamline PR review process",
        "description": "Create comprehensive PR descriptions that help reviewers understand changes faster with visual aids"
      },
      {
        "target_user": "Tech leads",
        "title": "Maintain documentation standards",
        "description": "Enforce consistent PR description formatting across the team with structured templates"
      },
      {
        "target_user": "Open source maintainers",
        "title": "Guide contributor submissions",
        "description": "Help contributors write clear PR descriptions that reduce review time and improve contribution quality"
      }
    ],
    "prompt_templates": [
