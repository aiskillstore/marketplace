  "content": {
    "user_title": "Create skills for Claude Code plugins",
    "value_statement": "Creating skills from scratch can lead to inconsistent structure and missed best practices. This skill provides a systematic six-step process for building effective skills with progressive disclosure, strong trigger descriptions, and proper resource organization.",
    "seo_keywords": [
      "skill development",
      "Claude Code skills",
      "plugin development",
      "skill structure",
      "progressive disclosure",
      "skill creation",
      "Claude plugins",
      "Claude Code",
      "Codex",
      "knowledge packages"
    ],
    "actual_capabilities": [
      "Guide users through a six-step skill creation process",
      "Explain skill anatomy: SKILL.md, scripts, references, and assets",
      "Teach progressive disclosure for efficient context management",
      "Provide writing style requirements: imperative form, third-person descriptions",
      "Show validation checklist for quality assurance",
      "Demonstrate skill structure with real examples from plugin-dev"
    ],
    "limitations": [
      "This skill focuses on plugin skills, not standalone skill packages",
      "Does not include skill packaging or distribution scripts",
      "Does not provide auto-generation of skill files from templates"
    ],
    "use_cases": [
      {
        "target_user": "Plugin Developers",
        "title": "Build new plugin skills",
        "description": "Create skills for your plugin following best practices for structure, triggers, and organization."
      },
      {
        "target_user": "Skill Authors",
        "title": "Improve existing skills",
        "description": "Refactor bloated SKILL.md files using progressive disclosure and move details to references."
      },
      {
        "target_user": "AI Engineers",
        "title": "Design skill taxonomies",
        "description": "Plan skill contents by analyzing use cases and identifying reusable scripts, references, and assets."
      }
    ],
    "prompt_templates": [
      {
        "title": "Create new skill",
        "scenario": "Starting a skill from scratch",
        "prompt": "Help me create a skill for [TASK]. Walk me through the six-step skill creation process."
      },
      {
        "title": "Refactor skill",
        "scenario": "Improving an existing skill",
        "prompt": "Review my existing skill at [PATH] and suggest improvements for trigger phrases, writing style, and progressive disclosure."
      },
      {
        "title": "Validate skill",
        "scenario": "Checking skill quality",
        "prompt": "Validate my skill using the checklist. Check the description quality, body writing style, and resource organization."
      },
      {
        "title": "Structure guidance",
        "scenario": "Understanding skill components",
        "prompt": "Explain what goes in SKILL.md versus references/ versus scripts/ for my [SKILL TYPE] skill."
      }
    ],
    "output_examples": [
      {
        "input": "Help me create a skill for PDF operations.",
        "output": [
          "Define concrete usage examples: rotate PDF, extract pages, merge documents",
          "Identify reusable resources: scripts/ for PDF tools, references/ for API details",
          "Create skill structure: mkdir -p skills/pdf-ops/{references,scripts}",
          "Write SKILL.md with trigger phrases and imperative instructions",
          "Validate using the quality checklist"
        ]
      },
      {
