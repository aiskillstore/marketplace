    "prompt_templates": [
      {
        "title": "Simple Design Request",
        "scenario": "Create a basic visual piece",
        "prompt": "Create a visual artwork about [TOPIC] using the design philosophy framework. Generate a philosophy document and express it as a single-page composition."
      },
      {
        "title": "Specific Philosophy",
        "scenario": "Request a particular aesthetic style",
        "prompt": "Design a piece embodying [PHILOSOPHY NAME] philosophy about [TOPIC]. Include space, color, and form considerations. Output as PNG."
      },
      {
        "title": "Multi-Page Document",
        "scenario": "Create extended visual series",
        "prompt": "Create a three-page visual journey exploring [THEME]. Each page should express a different aspect while maintaining cohesion. Save as PDF."
      },
      {
        "title": "Refinement Request",
        "scenario": "Polish existing artwork",
        "prompt": "The current composition is close but needs refinement. Make it pristine and museum-quality. Focus on precision, spacing, and expert craftsmanship."
      }
    ],
    "output_examples": [
      {
        "input": "Create an abstract composition about the concept of time",
        "output": [
          "Philosophy: 'Temporal Layers' - capturing time through superposition",
          "Design: Geometric layers in muted earth tones with a single bold accent",
          "Output: Single-page PNG composition with clinical typography"
        ]
      }
    ],
    "best_practices": [
      "Provide clear conceptual direction for more focused visual outcomes",
      "Specify whether you want PNG (single page) or PDF (multi-page) format",
      "Request specific philosophies like 'Brutalist Joy' or 'Chromatic Silence' for targeted aesthetics",
      "Use refinement iterations to achieve museum-quality precision"
    ],
    "anti_patterns": [
      "Asking for specific copyrighted artwork reproductions",
      "Requesting animation or interactive elements",
      "Providing overly vague concepts without any direction",
      "Expecting the skill to access external design resources not included"
    ],
    "faq": [
      {
        "question": "What AI tools support this skill?",
        "answer": "Works with Claude, Codex, and Claude Code. Any tool that can read and execute skill prompts."
      },
      {
        "question": "What file formats does it output?",
        "answer": "PNG for single-page compositions and PDF for multi-page documents. No animations or interactive formats."
      },
      {
        "question": "Can I use custom fonts?",
        "answer": "The skill includes 40+ open-source fonts. External font access depends on your tool's capabilities."
      },
      {
        "question": "Is my data safe?",
        "answer": "This is a prompt-only skill. No data leaves your session. All processing happens locally through your AI tool."
      },
      {
        "question": "Why does my output look different from real art?",
        "answer": "The skill generates original compositions based on your prompts. Provide clear philosophical direction for better results."
      },
      {
