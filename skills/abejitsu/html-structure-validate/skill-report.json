    "user_title": "Validate HTML5 Structure",
    "value_statement": "AI-generated HTML often contains structural errors that cause rendering issues. This quality gate validates HTML5 compliance, tag closure, and required elements before the pipeline continues.",
    "seo_keywords": [
      "HTML5 validation",
      "Claude Code",
      "Claude",
      "Codex",
      "HTML structure",
      "quality gate",
      "tag validation",
      "DOCTYPE validation",
      "semantic HTML"
    ],
    "actual_capabilities": [
      "Validates HTML5 DOCTYPE declaration",
      "Checks proper tag closure and nesting",
      "Verifies required meta tags and title",
      "Confirms CSS stylesheet link presence",
      "Validates page container structure",
      "Generates JSON validation report"
    ],
    "limitations": [
      "Does not validate CSS or JavaScript syntax",
      "Does not check accessibility compliance",
      "Requires external Python validate_html.py tool",
      "Does not fix HTML errors automatically"
    ],
    "use_cases": [
      {
        "target_user": "Content creators",
        "title": "HTML Quality Gate",
        "description": "Ensures AI-generated book pages meet HTML structural standards before publishing"
      },
      {
        "target_user": "Developers",
        "title": "Pipeline Validation",
