        "output": [
          "meta:",
          "  category: libraries",
          "  count: 3",
          "",
          "items[3]{id,name,description,path}:",
          "  baml,BAML,Structured LLM outputs,lib/baml",
          "  mcp,MCP,Tool integration,lib/mcp",
          "  prisma,Prisma,Database ORM,lib/prisma"
        ]
      }
    ],
    "best_practices": [
      "Always validate with npx @toon-format/cli --decode before using in production",
      "Design data structures for tabular representation when possible",
      "Keep JSON as canonical source and generate TOON for LLM transport"
    ],
    "anti_patterns": [
      "Using TOON for deeply nested or irregular data structures",
      "Including comments or YAML-style lists in TOON files",
      "Forgetting blank lines after tabular arrays"
    ],
    "faq": [
      {
        "question": "Is TOON compatible with standard JSON parsers?",
        "answer": "No, TOON requires specialized parsers. Use official libraries for TypeScript (@toon-format/toon) and Python (python-toon)."
      },
      {
        "question": "What are the token savings compared to JSON?",
        "answer": "TOON typically saves 30-60% tokens by using compact tabular syntax and removing unnecessary punctuation."
      },
      {
        "question": "Can I use TOON for configuration files?",
        "answer": "No, use JSON instead. TOON is optimized for LLM prompts, not for tools that expect standard JSON."
      },
      {
        "question": "How do I handle validation errors?",
        "answer": "Run the auto-fix scripts in order from validation-tools.md, then re-validate with npx @toon-format/cli --decode."
      },
      {
        "question": "Does TOON support all JSON features?",
        "answer": "No, TOON lacks comments, YAML-style lists, and multiline strings. It's designed for tabular data efficiency."
      },
      {
        "question": "When should I choose TOON over JSON?",
        "answer": "Use TOON for uniform tabular data sent to LLMs. Use JSON for configuration, APIs, or programmatic data manipulation."
      }
    ]
