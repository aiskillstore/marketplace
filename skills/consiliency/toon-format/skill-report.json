    ],
    "actual_capabilities": [
      "Encodes tabular data in TOON format with 30-60% token savings vs JSON",
      "Validates TOON syntax using the official @toon-format/cli tool",
      "Provides complete format rules for proper TOON syntax",
      "Auto-fixes common TOON formatting errors with documented scripts",
      "Supports nested objects, multi-line strings, and explicit array counts",
      "Creates efficient documentation indexes and manifests for LLMs"
    ],
    "limitations": [
      "Only suitable for uniform tabular data structures",
      "Requires the official TOON CLI for validation",
      "Not ideal for deeply nested or non-uniform data",
      "Limited ecosystem compared to JSON"
    ],
    "use_cases": [
      {
        "target_user": "AI developers",
        "title": "Optimize LLM prompt data",
        "description": "Reduce token costs by encoding documentation and indexes in TOON format before sending to language models."
      },
      {
        "target_user": "Technical writers",
        "title": "Create efficient documentation indexes",
        "description": "Build structured indexes and manifests that consume fewer tokens when processed by AI systems."
      },
      {
        "target_user": "Data engineers",
        "title": "Format tabular data for AI processing",
        "description": "Transform CSV-like datasets into TOON for more efficient LLM consumption and analysis."
      }
    ],
    "prompt_templates": [
      {
        "title": "Convert JSON to TOON",
        "scenario": "You have JSON data that needs TOON formatting",
        "prompt": "Convert this JSON array to TOON format with proper syntax: use explicit count, 2-space indentation, and add blank line after arrays. Here's the JSON: [paste your data]"
      },
      {
        "title": "Validate TOON file",
        "scenario": "Check if your TOON syntax is correct",
        "prompt": "Validate this TOON file and fix any syntax errors: missing counts, wrong indentation, or formatting issues. Show the corrected version: [paste your TOON]"
      },
      {
        "title": "Design tabular structure",
        "scenario": "Plan data layout for TOON encoding",
        "prompt": "Help me design a TOON format for this data. Show how to structure it as tabular arrays with proper column definitions: [describe your data]"
      },
      {
        "title": "Batch convert documents",
        "scenario": "Transform multiple files to TOON",
        "prompt": "Create a script to convert these documentation files to TOON format. Include validation and error handling: [list your files]"
      }
    ],
    "output_examples": [
      {
        "input": "Convert a list of API endpoints to TOON format",
        "output": [
          "api_endpoints[3]{method,path,description,auth}:",
          "  GET,/users,List all users,none",
          "  POST,/users,Create new user,bearer",
          "  DELETE,/users/{id},Delete user,bearer",
          "",
          "meta:",
          "  version: 1.0",
          "  last_updated: 2025-01-10"
