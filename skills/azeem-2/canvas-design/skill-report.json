    "prompt_templates": [
      {
        "title": "Basic poster request",
        "scenario": "Creating a simple poster",
        "prompt": "Create a visual poster design in PNG or PDF format. Generate a design philosophy first, then express it as artwork. The design should emphasize visual expression over text."
      },
      {
        "title": "Abstract concept art",
        "scenario": "Visualizing an abstract idea",
        "prompt": "Create an abstract visual composition that expresses the concept of [concept]. Use a design philosophy movement approach. Output PNG or PDF with minimal text."
      },
      {
        "title": "Multi-page design",
        "scenario": "Creating a series",
        "prompt": "Create a multi-page visual artwork series. Each page should follow the same design philosophy but explore different aspects. Output as PDF with multiple pages."
      },
      {
        "title": "Refined masterpiece",
        "scenario": "Polishing existing design",
        "prompt": "Refine the existing design to achieve museum-quality craftsmanship. Make it crisp, cohesive, and pristine. Every detail should look meticulously crafted."
      }
    ],
    "output_examples": [
      {
        "input": "Create a visual poster about silence using brutalist design principles",
        "output": [
          "Design philosophy document (Markdown)",
          "Museum-quality poster in PNG or PDF format",
          "Minimal text elements integrated as visual accents",
          "Strong geometric forms and negative space"
        ]
      }
    ],
    "best_practices": [
      "Request one clear concept per design to allow focused artistic expression",
      "Specify the mood or emotion you want conveyed for better results",
      "Allow the AI to interpret the design philosophy - provide constraints, not prescriptions"
    ],
    "anti_patterns": [
      "Asking for realistic human figures or detailed faces - skill focuses on abstract composition",
      "Requesting text-heavy designs - philosophy emphasizes minimal text as visual accent",
      "Expecting photograph manipulation - skill creates original vector-based artwork"
    ],
    "faq": [
      {
        "question": "What formats can this skill output?",
        "answer": "PNG images and PDF documents. Both are downloadable files for immediate use."
      },
      {
        "question": "Can I use the output commercially?",
        "answer": "Yes. The skill uses OFL-licensed fonts and generates original artwork under Apache 2.0 license."
      },
      {
        "question": "Does this skill edit my existing images?",
        "answer": "No. This skill creates original designs from scratch using design philosophy principles."
      },
      {
        "question": "How long does generation take?",
        "answer": "Simple designs complete in seconds. Complex multi-page works may take longer to render."
      },
      {
        "question": "Can I request specific fonts?",
        "answer": "Yes. The skill includes 30+ curated fonts in the canvas-fonts directory. Request specific ones by name."
      },
      {
        "question": "How is this different from image generators?",
        "answer": "This skill creates design-forward artwork using philosophical principles, not AI image generation. Output follows established design movements."
      }
