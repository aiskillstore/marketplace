  "content": {
    "user_title": "Create and edit PowerPoint presentations",
    "value_statement": "This skill enables Claude to create, edit, and analyze PowerPoint presentations. It handles new presentations from scratch, template-based editing with slide rearrangement, and detailed content extraction. Perfect for automating slide generation and document workflow tasks.",
    "seo_keywords": [
      "PowerPoint",
      "PPTX",
      "presentation",
      "slides",
      "office automation",
      "Claude",
      "Codex",
      "Claude Code",
      "html2pptx",
      "OOXML"
    ],
    "actual_capabilities": [
      "Create new PowerPoint presentations from HTML or scratch with custom layouts and color palettes",
      "Edit existing presentations by extracting, modifying, and replacing text content using OOXML",
      "Rearrange slides from templates including duplication and reordering operations",
      "Generate thumbnail grids for visual presentation analysis and quality validation",
      "Extract text inventory with formatting details including fonts, colors, and paragraph properties",
      "Convert presentations to PDF and image formats for visual review workflows"
    ],
    "limitations": [
      "Requires LibreOffice and Poppler utilities installed for PDF and image conversion",
      "Limited to standard OOXML features - complex animations and transitions may not fully translate",
      "Image and chart replacement requires placeholder elements in source template"
    ],
    "use_cases": [
      {
        "target_user": "Content creators",
        "title": "Automated slide generation",
        "description": "Generate presentation decks from content outlines with consistent styling and branding"
      },
      {
        "target_user": "Business analysts",
        "title": "Template population",
        "description": "Fill corporate templates with new content while preserving design elements and layouts"
      },
      {
        "target_user": "Document processors",
        "title": "Format conversion",
        "description": "Convert and validate PowerPoint files between different formats with quality checks"
      }
    ],
    "prompt_templates": [
      {
        "title": "Create new presentation",
        "scenario": "Start a new deck",
        "prompt": "Create a new PowerPoint presentation with 5 slides about [TOPIC] using professional design principles"
      },
      {
        "title": "Fill template",
        "scenario": "Use existing template",
        "prompt": "Fill the template at template.pptx with content from outline.md, selecting appropriate slide layouts"
      },
      {
        "title": "Analyze and edit",
        "scenario": "Extract and modify",
        "prompt": "Extract all text from presentation.pptx, then replace the content on slides 1-3 with new text"
      },
      {
        "title": "Generate thumbnails",
        "scenario": "Visual validation",
        "prompt": "Generate a thumbnail grid of presentation.pptx to verify all slides render correctly"
      }
    ],
    "output_examples": [
      {
        "input": "Create a 3-slide presentation about quarterly results",
        "output": [
          "Created quarterly-results.pptx with 3 slides",
          "Slide 1: Title slide with company branding",
          "Slide 2: Key metrics with chart placeholder",
          "Slide 3: Summary bullet points",
          "Thumbnails generated for visual verification"
        ]
      },
      {
        "input": "Fill template.pptx with content from content.md",
        "output": [
          "Analyzed template with 10 unique layouts",
          "Created working.pptx with selected slides",
          "Extracted 45 text shapes from template",
          "Applied 42 text replacements with formatting preserved",
          "Output saved to output.pptx"
        ]
      }
    ],
    "best_practices": [
      "Always validate presentations after editing using the thumbnail grid for visual verification",
      "Use secure XML parsing (defusedxml) when processing untrusted PowerPoint files",
      "Test presentation output in PowerPoint to verify rendering matches intended design"
    ],
    "anti_patterns": [
      "Do not manually edit raw XML without understanding OOXML structure and relationships",
      "Avoid bypassing validation steps after making edits to presentations",
      "Do not assume all custom animations and transitions will transfer between formats"
    ],
    "faq": [
      {
        "question": "What file formats can this skill create?",
        "answer": "This skill creates .pptx files (PowerPoint 2007+) using the OOXML format standard."
      },
      {
        "question": "Can I edit presentations created in older PowerPoint versions?",
        "answer": "Yes, but some features from older formats may not be fully supported. Converting to modern format first helps."
      },
      {
        "question": "Does this skill work with password-protected presentations?",
        "answer": "No, encrypted or password-protected presentations cannot be edited without the password."
      },
      {
        "question": "What system dependencies are required?",
        "answer": "LibreOffice (for PDF conversion) and Poppler utilities (for image conversion) must be installed."
      },
      {
        "question": "Can I insert images into presentations?",
        "answer": "Yes, use the PptxGenJS API when creating new presentations or add images to templates via XML editing."
      },
      {
        "question": "How does the skill handle fonts?",
        "answer": "The skill uses web-safe fonts (Arial, Helvetica, Times New Roman, etc.) and extracts font properties from templates."
      }
    ]
  },
