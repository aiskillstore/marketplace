  "content": {
    "user_title": "Automate software releases with AI agents",
    "value_statement": "Software releases require coordinating version bumps, testing, deployment, and documentation. This skill orchestrates multiple AI agents to handle the entire release workflow automatically. It ensures consistent processes, reduces human error, and provides rollback capabilities.",
    "seo_keywords": [
      "Claude release management",
      "GitHub CI/CD automation",
      "semantic versioning",
      "deployment orchestration",
      "automated rollback",
      "canary deployment",
      "blue-green deployment",
      "Claude Code",
      "Codex",
      "AI agents"
    ],
    "actual_capabilities": [
      "Coordinate hierarchical AI agent swarm for release operations",
      "Determine version bumps using semantic versioning rules",
      "Execute multi-phase release testing and validation",
      "Generate changelogs and release notes automatically",
      "Deploy using rolling, blue-green, or canary strategies",
      "Trigger automated rollback on deployment failures"
    ],
    "limitations": [
      "Requires existing deployment scripts in your project",
      "Does not modify GitHub repository settings automatically",
      "Cannot approve releases without human authorization",
      "Monitoring requires configured health check endpoints"
    ],
    "use_cases": [
      {
        "target_user": "DevOps Engineers",
        "title": "Standard Release Orchestration",
        "description": "Automate major, minor, and patch releases with full testing, staging validation, and production deployment."
      },
      {
        "target_user": "Engineering Managers",
        "title": "Hotfix Emergency Response",
        "description": "Fast-track critical production fixes with expedited approval process and immediate deployment."
      },
      {
        "target_user": "Release Managers",
        "title": "Rollback Management",
        "description": "Monitor deployments and automatically trigger rollback when health metrics exceed thresholds."
      }
    ],
    "prompt_templates": [
      {
        "title": "Standard Release",
        "scenario": "Release a new version",
        "prompt": "Use the GitHub release management skill to release version 2.1.0. Run through the standard release workflow with staging validation and production deployment."
      },
      {
        "title": "Hotfix Release",
        "scenario": "Emergency patch needed",
        "prompt": "Use the GitHub release management skill to create a hotfix for a critical production bug. Fast-track the approval and deploy immediately."
      },
      {
        "title": "Rolling Deployment",
        "scenario": "Safe production rollout",
        "prompt": "Deploy the new release using a rolling strategy. Monitor health metrics and be ready to rollback if error rate exceeds 5 percent."
      },
      {
        "title": "Canary Rollout",
        "scenario": "Phased user rollout",
        "prompt": "Deploy the release using canary strategy at 10 percent traffic. Gradually increase to 25 percent, then 50 percent, then full rollout."
      }
    ],
