  "content": {
    "user_title": "Create and Edit PowerPoint Presentations",
    "value_statement": "Teams need reliable ways to create and update PPTX files at scale. This skill provides workflows for building, editing, and inspecting presentations using HTML and OOXML tooling.",
    "seo_keywords": [
      "Claude",
      "Codex",
      "Claude Code",
      "PPTX",
      "PowerPoint",
      "presentation automation",
      "OOXML",
      "html2pptx",
      "slide editing"
    ],
    "actual_capabilities": [
      "Create new PPTX decks from HTML slide layouts using html2pptx",
      "Unpack and edit OOXML files to update text, layouts, and metadata",
      "Duplicate and rearrange template slides to build new presentations",
      "Extract slide content and notes for documentation or review",
      "Generate thumbnail grids for visual QA of template decks"
    ],
    "limitations": [
      "Requires external tools such as LibreOffice and Poppler for conversions",
      "Complex animations and transitions may not render consistently",
      "Custom fonts may not be available on all systems",
      "Embedded charts and SmartArt require manual OOXML edits"
    ],
    "use_cases": [
      {
        "title": "Convert HTML mockups to PPTX",
        "description": "Turn approved HTML slide designs into a finished PowerPoint deck with consistent layout and styling.",
        "target_user": "Designers and content teams"
      },
      {
        "title": "Populate branded templates",
        "description": "Fill corporate templates with new content while preserving layout and branding rules.",
        "target_user": "Marketing and operations teams"
      },
      {
        "title": "Audit and update training decks",
        "description": "Extract text and notes, apply replacements, and verify slide layouts across multiple files.",
        "target_user": "Training and enablement teams"
      }
    ],
    "prompt_templates": [
      {
        "title": "Build a new deck from HTML",
        "prompt": "Create a {n}-slide PPTX about {topic}. Read html2pptx.md, draft HTML for each slide, then generate the PPTX with html2pptx.js.",
        "scenario": "Beginner workflow for new presentations"
      },
      {
        "title": "Edit an existing PPTX",
        "prompt": "Update {file.pptx}. Read ooxml.md, unpack the file, modify the required slide XML, validate, and repack.",
        "scenario": "Intermediate edits to existing decks"
      },
      {
        "title": "Populate a template with content",
        "prompt": "Use {template.pptx} and insert this content: {content}. Duplicate slides {indices} and replace placeholders using replace.py.",
        "scenario": "Template driven deck creation"
      },
      {
        "title": "Analyze a deck and produce a report",
        "prompt": "Analyze {file.pptx}. Extract text and notes, create thumbnails, and summarize fonts and colors used.",
        "scenario": "Advanced analysis and QA"
      }
    ],
    "output_examples": [
      {
        "input": "Create a 5 slide deck on machine learning basics",
        "output": "The skill generates HTML slides, converts them to PPTX, and reports the saved file location with a slide count summary."
      },
      {
        "input": "Replace placeholder text in the Q1 template",
        "output": "The skill duplicates the requested slides, applies the new text, validates the XML, and confirms the updated PPTX path."
      }
    ],
    "best_practices": [
      "Read html2pptx.md and ooxml.md before modifying files",
      "Validate edited XML with validate.py before repacking",
      "Use web safe fonts for consistent rendering"
    ],
    "anti_patterns": [
      "Do not edit OOXML without a backup of the original PPTX",
      "Avoid running conversions on untrusted files without review",
      "Do not rely on custom fonts that are not installed on target systems"
    ],
    "faq": [
      {
        "question": "When should I use html2pptx instead of OOXML edits?",
        "answer": "Use html2pptx for new presentations and OOXML edits for precise changes to existing files."
      },
      {
        "question": "Can the skill handle large decks?",
        "answer": "Large decks are supported, but processing time increases with slide count and image size."
      },
      {
        "question": "What tools are required for PDF and image conversion?",
        "answer": "LibreOffice and Poppler are required for PDF and image conversion steps."
      },
      {
        "question": "How do I validate my edits?",
        "answer": "Run validate.py after edits to check structure and relationships before repacking."
      },
      {
        "question": "Can I edit charts and SmartArt?",
        "answer": "Editing charts and SmartArt requires manual OOXML changes and is not automated."
      },
      {
        "question": "Where can I review slide thumbnails?",
        "answer": "Use thumbnail.py to generate a grid image for visual review of all slides."
      }
    ]
  },
