    "user_title": "Create and structure Claude Code plugin skills",
    "value_statement": "Building effective AI skills requires understanding progressive disclosure and proper documentation structure. This skill teaches you how to create modular skills that load efficiently and trigger at the right time.",
    "seo_keywords": [
      "Claude Code",
      "Claude",
      "Codex",
      "skill development",
      "plugin skills",
      "AI skills",
      "progressive disclosure",
      "SKILL.md",
      "Claude plugins",
      "skill creation"
    ],
    "actual_capabilities": [
      "Guides creation of SKILL.md files with proper YAML frontmatter",
      "Teaches progressive disclosure principles for efficient context loading",
      "Explains when to use scripts, references, and assets directories",
      "Provides validation checklist for skill quality assurance",
      "Shows correct writing style with imperative form instructions",
      "Demonstrates plugin-specific skill integration patterns"
    ],
    "limitations": [
      "Provides guidance only and does not auto-generate skill content",
      "Requires manual creation of referenced scripts and assets",
      "Focused on Claude Code plugins and may not apply to other platforms",
      "Does not include actual packaging scripts"
    ],
    "use_cases": [
      {
        "target_user": "Plugin Developer",
        "title": "Create first plugin skill",
        "description": "Learn the complete workflow from understanding use cases to writing SKILL.md with proper structure and trigger phrases."
      },
      {
        "target_user": "Skill Author",
        "title": "Improve existing skill",
        "description": "Apply progressive disclosure principles to move detailed content to references and keep SKILL.md lean and focused."
      },
      {
        "target_user": "Documentation Writer",
        "title": "Write effective trigger descriptions",
        "description": "Learn to write third-person descriptions with specific user phrases that reliably activate skills."
      }
    ],
    "prompt_templates": [
      {
        "title": "Start new skill",
        "scenario": "Creating a skill from scratch",
        "prompt": "I want to create a skill for [domain]. Help me understand what concrete examples I should gather first."
      },
      {
        "title": "Review skill structure",
        "scenario": "Checking if skill follows best practices",
        "prompt": "Review my skill and check if it follows the progressive disclosure principle. My SKILL.md is [X] words."
      },
      {
        "title": "Fix trigger description",
        "scenario": "Skill not activating when expected",
        "prompt": "My skill description is '[current description]'. Rewrite it in third person with specific trigger phrases."
      },
      {
        "title": "Refactor for disclosure",
        "scenario": "SKILL.md is too large",
        "prompt": "My SKILL.md is 5000 words. Help me identify what content should move to references/ to keep the body under 2000 words."
      }
    ],
