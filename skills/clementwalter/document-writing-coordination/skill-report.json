        "output": [
          "## Documentation Progress",
          "",
          "| Section | Status | Words |",
          "| ------- | ------ | ----- |",
          "| 1. Overview | Done | 450 |",
          "| 2. Authentication | In Review | 620 |",
          "| 3. Endpoints | In Progress | 890 |",
          "| 4. Models | Pending | 0 |",
          "",
          "## Summary",
          "",
          "1 section complete. 1 section awaiting review. 1 section actively being written."
        ]
      }
    ],
    "best_practices": [
      "Explore the codebase thoroughly before creating the outline to ensure all components are captured",
      "Provide sufficient context in each task so writers understand the project scope",
      "Set word limits for sections to trigger cascading delegation for large topics",
      "Run consistency checks after each section is merged to maintain document coherence"
    ],
    "anti_patterns": [
      "Writing content directly instead of delegating to specialized doc writer agents",
      "Creating tasks without enough context for fresh agents to understand the project",
      "Skipping the consistency review phase and allowing terminology drift",
      "Not updating task statuses in VibeKanban, losing track of document progress"
    ],
    "faq": [
      {
        "question": "Which AI tools support this skill?",
        "answer": "This skill works with Claude, Codex, and Claude Code. It requires VibeKanban MCP tools for task management."
      },
      {
        "question": "What is the maximum document size?",
        "answer": "Documents scale through recursive delegation. Set word limits per section and create subsections for complex topics."
      },
      {
        "question": "How do I integrate with VibeKanban?",
        "answer": "Configure the VibeKanban MCP plugin. Get your project UUID from list_projects and repo IDs from list_repos."
      },
      {
        "question": "Is my document data stored externally?",
        "answer": "No. This skill uses local MCP tools. Document content lives in your project repository only."
      },
      {
        "question": "Why are sections not being written?",
        "answer": "Verify that document-skills:doc-coauthoring is available and that tasks include the required skill invocation."
      },
      {
        "question": "How is this different from regular document writing?",
        "answer": "Unlike direct writing, this skill orchestrates multiple agents for parallel production. The coordinator never writes - only plans and reviews."
      }
    ]
