  "content": {
    "user_title": "Coordinate multi-agent document writing",
    "value_statement": "Large documentation projects require coordination across multiple writers. This skill breaks documents into sections, delegates to specialized doc agents, and ensures consistency through structured review workflows.",
    "seo_keywords": [
      "document coordination",
      "multi-agent documentation",
      "design document",
      "vibekanban",
      "documentation delegation",
      "Claude",
      "Codex",
      "Claude Code",
      "doc writer",
      "chief of staff"
    ],
    "actual_capabilities": [
      "Break large documents into sections with clear scope definitions",
      "Create VibeKanban tasks for each section with required context",
      "Spawn doc writer agents for parallel content creation",
      "Monitor progress and status across all document sections",
      "Review completed sections against defined acceptance criteria",
      "Ensure cross-section consistency through automated checks"
    ],
    "limitations": [
      "Does not write content directly - only coordinates",
      "Requires VibeKanban MCP tools for task management",
      "Relies on separate doc-coauthoring skill for content creation",
      "Does not generate diagrams - writers must create their own"
    ],
    "use_cases": [
      {
        "target_user": "Tech Leads",
        "title": "Architectural Design Documents",
        "description": "Coordinate comprehensive design docs across team members with consistent structure and terminology"
      },
      {
        "target_user": "Documentation Engineers",
        "title": "API Reference Guides",
        "description": "Split large API docs into logical sections and delegate to specialized writers for parallel delivery"
      },
      {
        "target_user": "Project Managers",
        "title": "Multi-Phase Specifications",
        "description": "Orchestrate complex spec documents with cascading subsections and hierarchical task delegation"
      }
    ],
    "prompt_templates": [
      {
        "title": "Start Design Doc",
        "scenario": "Begin new architecture document",
        "prompt": "Coordinate creating a design document for my project. First explore the codebase to understand the structure, then create an outline with all major sections."
      },
      {
        "title": "Delegate Sections",
        "scenario": "Assign document sections to writers",
        "prompt": "Create VibeKanban tasks for each section of the document. Use the document-skills:doc-coauthoring skill for each task. Delegate all sections to doc writers."
      },
      {
        "title": "Check Progress",
        "scenario": "Monitor document completion status",
        "prompt": "Check the status of all document writing tasks. Show me which sections are done, in review, in progress, and still pending."
      },
      {
        "title": "Consistency Review",
        "scenario": "Review merged sections",
        "prompt": "Review all completed sections for consistency. Check terminology, cross-references, and ensure the document flows logically. Flag any issues."
      }
    ],
    "output_examples": [
      {
        "input": "Create a design document for my blockchain benchmarking project. Break it into sections and delegate to writers.",
        "output": [
          "## Document Outline Created",
          "",
          "1. Executive Summary",
          "2. Repository Organization",
          "3. Core Components",
          "4. Technology Deep Dives",
          "5. Architecture Patterns",
          "",
          "## Tasks Delegated",
          "",
          "- Doc: Section 1 - Executive Summary → Assigned",
          "- Doc: Section 2 - Repository Organization → Assigned",
          "- Doc: Section 3 - Core Components → Assigned",
          "",
          "## Status",
          "",
          "Active: 3 | Pending: 2 | Done: 0"
        ]
      },
      {
