    "user_title": "Audit filename conventions across your codebase",
    "value_statement": "Inconsistent naming conventions create confusion and technical debt. This skill systematically audits all filenames against your CLAUDE.md standards and identifies violations.",
    "seo_keywords": [
      "filename audit",
      "naming conventions",
      "code quality",
      "Claude Code",
      "Claude",
      "Codex",
      "file naming",
      "code standards",
      "codebase analysis",
      "naming patterns"
    ],
    "actual_capabilities": [
      "Scans entire codebase for filename patterns",
      "Extracts naming standards from CLAUDE.md files",
      "Identifies naming convention violations",
      "Categorizes issues by severity (Critical/High/Medium/Low)",
      "Generates detailed audit reports with statistics",
      "Identifies anti-patterns like temporary and version-suffixed files"
    ],
    "limitations": [
      "Read-only analysis - does not rename files",
      "Requires CLAUDE.md files for explicit standards",
      "Cannot fix issues automatically"
    ],
    "use_cases": [
      {
        "target_user": "Development teams",
        "title": "Establish coding standards",
        "description": "Audit existing codebase to identify inconsistent naming patterns before creating team-wide standards"
      },
      {
        "target_user": "Code reviewers",
        "title": "Pre-merge quality checks",
        "description": "Run naming audits before code reviews to catch naming convention violations early"
      },
      {
        "target_user": "Technical leads",
        "title": "Legacy codebase cleanup",
        "description": "Identify systematic naming issues across large codebases to plan refactoring efforts"
      }
    ],
    "prompt_templates": [
      {
