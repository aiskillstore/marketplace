  "content": {
    "user_title": "Generate markdown table of contents",
    "value_statement": "Manually creating and updating Table of Contents for markdown files is time consuming and error prone. This skill automatically extracts headers, generates anchor links, and inserts a properly formatted TOC with GitHub-compatible formatting.",
    "seo_keywords": [
      "markdown table of contents",
      "markdown toc generator",
      "claude code",
      "claude",
      "codex",
      "documentation automation",
      "readme toc",
      "markdown navigation",
      "github anchor links",
      "markdown index"
    ],
    "actual_capabilities": [
      "Generates TOC from markdown headers (H1-H6)",
      "Supports batch processing with glob patterns and recursive search",
      "Creates GitHub-compatible anchor links with proper formatting",
      "Smart insertion modes: auto, top, or marker-based placement",
      "Configurable header level filtering and custom TOC titles",
      "Dry-run mode to preview changes before applying"
    ],
    "limitations": [
      "Only processes markdown files with .md or .markdown extension",
      "Does not support nested bullet points in TOC beyond standard indentation",
      "Cannot generate TOC for binary or non-markdown document formats",
      "Anchor generation follows GitHub rules which may not match all platforms"
    ],
    "use_cases": [
      {
        "target_user": "Documentation writers",
        "title": "Update project documentation",
        "description": "Automatically generate fresh TOC for all markdown files in a documentation directory"
      },
      {
        "target_user": "Open source maintainers",
        "title": "Maintain README navigation",
        "description": "Keep table of contents synchronized with evolving project documentation"
      },
      {
        "target_user": "Technical writers",
        "title": "Standardize TOC format",
        "description": "Apply consistent TOC markers and formatting across multiple documentation files"
      }
    ],
    "prompt_templates": [
      {
        "title": "Simple TOC generation",
        "scenario": "Generate TOC for a single file",
        "prompt": "Generate toc for README.md"
      },
      {
        "title": "Preview changes first",
        "scenario": "Preview TOC without modifying files",
        "prompt": "Generate toc for README.md --dry-run"
      },
      {
        "title": "Batch process files",
        "scenario": "Update TOC for multiple files",
        "prompt": "Generate toc --recursive --dry-run docs/"
      },
      {
        "title": "Custom level range",
        "scenario": "Control which headers to include",
        "prompt": "Generate toc --min-level 2 --max-level 4 README.md"
      }
    ],
    "output_examples": [
      {
        "input": "Generate toc for README.md",
        "output": [
          "Updated README.md with 23 headers",
          "Generated TOC with H2-H3 levels",
          "Inserted after YAML frontmatter"
        ]
      },
      {
        "input": "Generate toc --insert marker docs/*.md",
        "output": [
          "Processed 5 markdown files",
          "Used custom markers for insertion",
          "TOC format: GitHub-compatible anchors"
        ]
      },
      {
        "input": "Generate toc --recursive --dry-run .",
        "output": [
          "Found 12 markdown files",
          "Preview: 156 total headers would be included",
          "Ready to apply with TOC markers"
        ]
      }
    ],
    "best_practices": [
      "Always run with --dry-run first to preview TOC output before applying changes",
      "Use --min-level and --max-level to filter headers for cleaner navigation",
      "Use marker insertion mode with explicit markers like <!-- TOC --> for precise placement"
    ],
    "anti_patterns": [
      "Running without dry-run on important files that lack version control",
      "Processing files with duplicate headers without checking for conflicts",
      "Using default levels on files with very deep header hierarchies"
    ],
    "faq": [
      {
        "question": "What file formats are supported?",
        "answer": "Only markdown files with .md, .markdown, or .mdown extensions. Other formats are skipped."
      },
      {
        "question": "What header levels are included by default?",
        "answer": "By default, H2 and H3 headers are included. Use --min-level and --max-level to customize."
      },
      {
        "question": "Can I use this with other AI tools like Claude Code?",
        "answer": "Yes, the skill supports claude, codex, and claude-code. The script works standalone too."
      },
      {
        "question": "Is my data safe when using this skill?",
        "answer": "Yes, all processing happens locally. No data is sent to external servers or APIs."
      },
      {
        "question": "TOC appears in wrong location, how to fix?",
        "answer": "Use --insert marker mode with explicit markers like <!-- TOC --> for precise placement."
      },
      {
        "question": "How does this compare to VS Code TOC extensions?",
        "answer": "This is a CLI tool for batch processing. VS Code extensions offer UI integration but require GUI."
      }
    ]
