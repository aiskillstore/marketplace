      {
        "target_user": "Full-Stack Developers",
        "title": "Generate code consistently",
        "description": "Use Nx generators to create applications and libraries with standardized patterns and shared configurations."
      },
      {
        "target_user": "Team Leads",
        "title": "Manage monorepo governance",
        "description": "Set up CODEOWNERS, RFC processes, and cross-team coordination for large-scale monorepo projects."
