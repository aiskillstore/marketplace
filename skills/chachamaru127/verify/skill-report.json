  "content": {
    "user_title": "Verify Builds and Recover from Errors",
    "value_statement": "Failed builds and broken tests waste development time. This skill verifies code builds, recovers from common errors, and applies approved review fixes while enforcing quality standards that prevent test tampering.",
    "seo_keywords": [
      "build verification",
      "error recovery",
      "test automation",
      "CI fixes",
      "Claude Code",
      "Claude",
      "Codex",
      "code review",
      "automated fixes",
      "development workflow"
    ],
    "actual_capabilities": [
      "Runs builds and tests to verify code changes work correctly",
      "Automatically recovers from common build errors like missing modules",
      "Applies approved review fixes such as removing unused imports",
      "Enforces quality guardrails that prevent test skipping or assertion removal",
      "Aggregates multiple review types into unified reports"
    ],
    "limitations": [
      "Cannot fix complex architectural or design issues automatically",
      "Requires user approval for non-trivial code changes",
      "Limited to 3 retry attempts before escalation",
      "Cannot modify protected configuration files like eslintrc or tsconfig"
    ],
    "use_cases": [
      {
        "target_user": "Developers",
        "title": "Post-Implementation Verification",
        "description": "Automatically verify builds and tests pass after implementing new features or fixes"
      },
      {
        "target_user": "Code Reviewers",
        "title": "Apply Review Feedback",
        "description": "Quickly apply approved automated fixes from code reviews like formatting and unused code removal"
      },
      {
        "target_user": "DevOps Engineers",
        "title": "CI Pipeline Recovery",
        "description": "Automatically recover from common CI failures without manual intervention"
      }
    ],
    "prompt_templates": [
      {
        "title": "Verify Build",
        "scenario": "After implementing changes",
        "prompt": "I just finished implementing the new feature. Can you verify that the build passes and all tests are working correctly?"
      },
      {
        "title": "Fix Build Errors",
        "scenario": "When build fails",
        "prompt": "The build is failing with TypeScript errors. Can you help fix these compilation issues?"
      },
      {
        "title": "Apply Review Fixes",
        "scenario": "After code review",
        "prompt": "The code review found several issues. Can you apply the automated fixes for unused imports and formatting?"
      },
      {
        "title": "Error Recovery",
        "scenario": "Test failures",
        "prompt": "The tests are failing with assertion errors. Try to automatically fix the issues or escalate if needed."
      }
    ],
    "output_examples": [
      {
        "input": "Verify that my recent changes build successfully",
        "output": [
          "Build verification complete",
          "Build: Success",
          "Type check: Passed",
          "Tests: 15 passed, 0 failed",
          "Lint: No issues found",
          "Ready to proceed to next step"
        ]
      },
      {
        "input": "Help me recover from these build errors",
        "output": [
          "Analyzing error patterns",
          "Found: Cannot find module 'express'",
          "Attempting: npm install express",
          "Build: Success after recovery",
          "Note: 2 retry attempts remaining"
        ]
      }
    ],
    "best_practices": [
      "Always verify builds after making changes before submitting pull requests",
      "Use the skill quality guardrails to prevent test tampering shortcuts",
      "Review the diff before approving automated fixes to understand changes"
    ],
    "anti_patterns": [
      "Skipping tests or removing assertions to make builds pass",
      "Disabling lint rules instead of fixing underlying code issues",
      "Using continue-on-error to bypass CI checks without resolving root causes"
    ],
    "faq": [
      {
        "question": "Which programming languages are supported?",
        "answer": "Node.js, Python, Rust, and Go projects are supported with language-specific build commands"
      },
      {
        "question": "What happens if automatic fixes fail?",
        "answer": "The skill retries up to 3 times, then escalates with detailed error information and recommended actions"
