  "content": {
    "user_title": "Update project documentation automatically",
    "value_statement": "Documentation drift causes confusion and wasted time. This skill uses AI to automatically sync README files, API docs, and internal documentation with codebase changes. Keep your project docs accurate without manual effort.",
    "seo_keywords": [
      "documentation",
      "claude",
      "claude-code",
      "readme",
      "api docs",
      "markdown",
      "haiku",
      "documentation automation",
      "sync docs",
      "unite-hub"
    ],
    "actual_capabilities": [
      "Update README.md with new features and tech stack changes",
      "Document new API endpoints with request and response examples",
      "Maintain .claude/claude.md and .claude/agent.md files",
      "Generate changelog entries for releases",
      "Create architecture diagrams in markdown",
      "Keep documentation in sync with code changes"
    ],
    "limitations": [
      "Designed specifically for Unite-Hub project structure",
      "Does not generate video tutorials or interactive content",
      "Requires manual prompting to trigger updates",
      "Does not update external documentation platforms"
    ],
    "use_cases": [
      {
        "target_user": "Developers",
        "title": "Sync docs with code changes",
        "description": "Keep README and API docs accurate after each feature release"
      },
      {
        "target_user": "Technical writers",
        "title": "Maintain internal documentation",
        "description": "Update agent definitions and architecture docs systematically"
      },
      {
        "target_user": "AI agent operators",
        "title": "Generate changelog entries",
        "description": "Automatically create release notes from code changes"
      }
    ],
    "prompt_templates": [
      {
        "title": "Update README",
        "scenario": "Sync README after feature",
        "prompt": "Update README.md to reflect the new feature: [describe feature]"
      },
      {
        "title": "Document API",
        "scenario": "Add new endpoint docs",
        "prompt": "Document the new API endpoint at [path] including method, request body, response format, and error codes"
      },
      {
        "title": "Create changelog",
        "scenario": "Document release changes",
        "prompt": "Generate a changelog entry for version [version] based on these changes: [list changes]"
      },
      {
        "title": "Sync all docs",
        "scenario": "Full documentation sync",
        "prompt": "Review all markdown documentation files and update them to reflect the current state of the codebase"
      }
    ],
    "output_examples": [
      {
        "input": "Update README.md to reflect the new bulk contact update API endpoint",
        "output": [
          "Added new feature section for bulk contact updates",
          "Updated API Documentation link to new endpoint",
          "Verified all code examples are current",
          "No broken internal links detected"
        ]
      },
      {
        "input": "Document the new POST /api/agents/analyze endpoint",
        "output": [
          "Created endpoint documentation with request and response schemas",
          "Added TypeScript code example for calling the endpoint",
          "Listed all error codes and their meanings",
          "Updated table of contents with new section"
        ]
      },
      {
        "input": "Generate changelog for version 1.2.0",
        "output": [
          "Created changelog with Added, Changed, Fixed, and Security sections",
          "Documented 5 new features, 3 improvements, and 2 bug fixes",
          "Formatted dates and version numbers correctly",
          "Preserved existing changelog entries"
        ]
      }
    ],
    "best_practices": [
      "Update docs immediately after code changes to prevent drift",
      "Include code examples in all documentation updates",
      "Verify documentation changes against source code before saving"
    ],
    "anti_patterns": [
      "Batching multiple unrelated changes into one update",
      "Using casual or informal tone in technical documentation",
      "Skipping verification of code examples before publishing"
    ],
