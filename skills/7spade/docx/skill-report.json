  "content": {
    "user_title": "Create and edit Word documents",
    "value_statement": "This skill enables Claude to create, edit, and analyze Word documents (.docx files). It handles document structure, tracked changes, comments, and formatting preservation for professional document workflows.",
    "seo_keywords": [
      "docx document creation",
      "Word document editing",
      "tracked changes",
      "Office Open XML",
      "Claude Code",
      "document automation",
      "Word formatting",
      "document analysis",
      "pandoc conversion",
      "libreoffice"
    ],
    "actual_capabilities": [
      "Create new Word documents with paragraphs, tables, images, and styles",
      "Edit existing documents using OOXML manipulation with tracked changes",
      "Extract text and content from .docx files using pandoc",
      "Convert documents to markdown with tracked changes preserved",
      "Add and manage comments in documents",
      "Validate document structure against OOXML schemas"
    ],
    "limitations": [
      "Cannot render documents visually or extract images from locked documents",
      "Requires external tools (pandoc, soffice) for some conversions",
      "Complex formatting may require manual review after manipulation",
      "Does not support encrypted or password-protected documents"
    ],
    "use_cases": [
      {
        "target_user": "Legal professionals",
        "title": "Review contracts with tracked changes",
        "description": "Edit legal documents while preserving revision history for compliance documentation."
      },
      {
        "target_user": "Technical writers",
        "title": "Automate documentation updates",
        "description": "Batch update documentation files while maintaining formatting and tracked change records."
      },
      {
        "target_user": "Business users",
        "title": "Standardize document formatting",
        "description": "Apply consistent styles and formatting across multiple Word documents."
      }
    ],
    "prompt_templates": [
      {
        "title": "Create simple document",
        "scenario": "New document with basic content",
        "prompt": "Create a new Word document named report.docx with a title 'Quarterly Report', a subtitle with today's date, and three paragraphs of placeholder text about Q1 results."
      },
      {
        "title": "Edit with tracked changes",
        "scenario": "Edit existing document",
        "prompt": "Edit the document at /workspace/contract.docx to change '30 days' to '45 days' throughout. Use the redlining workflow to create tracked changes visible in Word."
      },
      {
        "title": "Extract document content",
        "scenario": "Analyze document text",
        "prompt": "Extract all text content from the document at /workspace/proposal.docx and output it as markdown. Include tracked changes (accepted)."
      },
      {
        "title": "Add comments",
        "scenario": "Review document",
        "prompt": "Open the document at /workspace/draft.docx and add comments to the first paragraph suggesting improvements to the language and structure."
      }
    ],
    "output_examples": [
      {
        "input": "Create a new Word document with a title, heading, and paragraph",
        "output": [
          "Created document with title 'Project Proposal'",
          "Added heading 'Executive Summary'",
          "Paragraph describes project goals",
          "Document saved to /workspace/project.docx"
        ]
      },
      {
        "input": "Edit contract to change payment terms from Net 30 to Net 45",
        "output": [
          "Unpacked document to /workspace/contract_unpacked",
          "Created 3 tracked changes updating payment terms",
          "Repacked to /workspace/contract_updated.docx",
          "Tracked changes show 'Net 30' replaced with 'Net 45'"
        ]
      },
      {
        "input": "Extract text from annual report",
        "output": [
          "Converted report.docx to markdown",
          "Extracted 15 paragraphs across 5 sections",
          "Text content preserved with heading hierarchy"
        ]
      }
    ],
    "best_practices": [
      "Always use the redlining workflow when editing documents you did not create to maintain revision history",
      "Group related edits into batches of 3-10 changes for easier debugging and review",
      "Use pandoc with --track-changes=all to see complete document state including all revisions"
    ],
    "anti_patterns": [
      "Do not use raw newlines (\\n) in text content - use separate Paragraph elements",
      "Avoid repeating unchanged text in tracked changes - preserve original run RSID values",
      "Do not skip validation when repacking documents - it may produce corrupt files"
    ],
    "faq": [
      {
        "question": "Can this skill work with password-protected documents?",
        "answer": "No, encrypted or password-protected documents require credentials to open."
      },
      {
        "question": "How does tracked changes work?",
        "answer": "Edits are marked with <w:ins> (insertions) and <w:del> (deletions) tags visible in Word."
      },
      {
        "question": "What tools are required?",
        "answer": "pandoc for text extraction, libreoffice for PDF conversion, and defusedxml for secure XML parsing."
      },
      {
        "question": "Can I edit images in documents?",
        "answer": "The skill can extract and replace images but cannot modify image content directly."
      },
      {
        "question": "What file formats are supported?",
        "answer": ".docx, .pptx, and .xlsx files are supported for unpacking and repacking."
      },
      {
        "question": "How are document changes validated?",
        "answer": "Changes are validated against OOXML schemas to ensure document structure remains compliant."
      }
    ]
