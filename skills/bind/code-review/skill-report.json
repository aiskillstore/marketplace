    "user_title": "Review Pull Requests Automatically",
    "value_statement": "Code reviews take significant time and can miss important issues. This skill uses multiple specialized AI agents to automatically review pull requests with confidence scoring to filter false positives and highlight real problems.",
    "seo_keywords": [
      "code review",
      "pull request review",
      "automated review",
      "AI code review",
      "PR analysis",
      "GitHub",
      "Claude",
      "Codex",
      "Claude Code",
      "developer tools"
    ],
    "actual_capabilities": [
      "Automatically checks if review is needed, skips closed, draft, trivial PRs",
      "Launches 4 parallel agents for comprehensive code analysis",
      "Audits code against AGENTS.md compliance guidelines",
      "Scans for bugs and logic errors in pull request diffs",
      "Validates each issue with sub-agents before reporting",
      "Posts inline comments or outputs terminal results with confidence scores"
    ],
    "limitations": [
      "Requires GitHub CLI installed and authenticated",
      "Cannot review code outside of pull request diffs",
      "Only reports issues scoring 80 or higher confidence",
      "Does not replace human review for complex architectural decisions"
    ],
    "use_cases": [
      {
        "target_user": "Software Engineering Teams",
        "title": "Standardize Code Reviews",
        "description": "Ensure consistent code quality across all team pull requests with automated multi-agent analysis"
      },
      {
        "target_user": "Open Source Maintainers",
        "title": "Scale Review Capacity",
        "description": "Handle more pull requests by automating initial code review and compliance checks"
      },
      {
        "target_user": "QA Engineers",
        "title": "Catch Bugs Early",
        "description": "Identify bugs and logic issues before they reach production with confidence-scored findings"
      }
    ],
    "prompt_templates": [
      {
        "title": "Basic Review",
        "scenario": "Review current PR",
        "prompt": "/code-review"
      },
      {
        "title": "Post Comments",
        "scenario": "Add inline review comments to PR",
        "prompt": "/code-review --comment"
      },
      {
        "title": "Targeted Review",
        "scenario": "Review specific files in PR",
        "prompt": "/code-review for files src/components/, src/utils/"
      },
      {
        "title": "Strict Mode",
        "scenario": "High confidence only review",
        "prompt": "/code-review --comment --min-confidence 90"
      }
    ],
    "output_examples": [
