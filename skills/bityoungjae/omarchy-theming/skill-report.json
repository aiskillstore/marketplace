  "content": {
    "user_title": "Create Omarchy Desktop Themes",
    "value_statement": "Creating consistent desktop themes across multiple applications is complex and time-consuming. Omarchy theming provides a centralized colors.toml configuration that automatically generates themes for all desktop applications including terminals, window managers, and system tools.",
    "seo_keywords": [
      "omarchy themes",
      "desktop theming",
      "hyprland colors",
      "terminal themes",
      "alacritty theme",
      "kitty theme",
      "waybar styling",
      "claude code",
      "claude ai",
      "codex"
    ],
    "actual_capabilities": [
      "Create colors.toml theme files with 22 required color variables",
      "Generate themes for terminal emulators (Alacritty, Kitty, Ghostty)",
      "Configure Hyprland and Waybar styling from centralized colors",
      "Create supporting theme files for neovim, VS Code, btop, and browsers",
      "Apply light and dark theme modes with appropriate color schemes",
      "Troubleshoot theme application and variable format issues"
    ],
    "limitations": [
      "Does not execute theme installation commands (user must run omarchy CLI)",
      "Cannot access local theme files for editing (purely prompt-based)",
      "Only supports HEX color format (#RRGGBB), not RGB or HSL",
      "Does not generate wallpaper images or preview graphics"
    ],
    "use_cases": [
      {
        "target_user": "Hyprland Users",
        "title": "Unified Desktop Theme",
        "description": "Create a single colors.toml that generates consistent Hyprland borders, Waybar styling, and terminal colors across your entire desktop environment."
      },
      {
        "target_user": "Developers",
        "title": "Matching Editor Theme",
        "description": "Generate coordinated themes for neovim, VS Code, and terminals from one configuration file for a distraction-free coding environment."
      },
      {
        "target_user": "System Customizers",
        "title": "Multi-App Theming",
        "description": "Apply the same color palette to Alacritty, Kitty, Ghostty, btop, Mako notifications, and browsers with minimal configuration effort."
      }
    ],
    "prompt_templates": [
      {
        "title": "Create Dark Theme",
        "scenario": "New Catppuccin-style dark theme",
        "prompt": "Create a new Omarchy dark theme called 'catppuccin-dark' with the Mocha color palette. Include colors.toml with all 22 variables, a neovim.lua file for LazyVim, and a btop.theme file."
      },
      {
        "title": "Convert Color Format",
        "scenario": "HEX to RGB for browser theme",
        "prompt": "What RGB format does omarchy-theming use for chromium.theme files? Show me how to convert #1e1e2e to the required format."
      },
      {
        "title": "Light Mode Theme",
        "scenario": "Light theme with light.mode marker",
        "prompt": "Create a light Omarchy theme with a light blue accent color (#1e66f5), light gray background (#eff1f5), and show how to create the light.mode marker file."
      },
      {
        "title": "Fix Theme Issues",
        "scenario": "Colors not applying correctly",
        "prompt": "My terminal colors are not applying after running omarchy-theme-set. What variables might be missing from colors.toml and what format should they use?"
      }
    ],
    "output_examples": [
      {
        "input": "Create a Tokyo Night dark theme for Omarchy with all 22 color variables",
        "output": [
          "accent = \"#7aa2f7\" (borders, buttons, highlights)",
          "cursor = \"#c0caf5\" (terminal cursor color)",
          "foreground = \"#a9b1d6\" (primary text)",
          "background = \"#1a1b26\" (primary background)",
          "selection_foreground = \"#c0caf5\" (selected text text)",
          "selection_background = \"#7aa2f7\" (selection highlight)",
          "color0-7 = \"#32344a\" through \"#787c99\" (normal ANSI colors)",
          "color8-15 = \"#444b6a\" through \"#acb0d0\" (bright ANSI colors)"
        ]
      },
      {
